{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Granicus Captions",
    "description": "",
    "type": "array",
    "items": {
        "type": "array",
        "minItems": 1,
        "items": {
            "oneOf": [
                {
                    "$ref": "#/definitions/caption"
                },
                {
                    "$ref": "#/definitions/metadata"
                }
            ]
        }
    },
    "definitions": {
        "caption": {
            "type": "object",
            "title": "caption",
            "properties": {
                "time": {
                    "type": "string",
                    "pattern": "[0-9]+(\\.[0-9]+)?"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "text"
                    ]
                },
                "text": {
                    "type": "string"
                }
            },
            "required": [
                "time",
                "type",
                "text"
            ]
        },
        "metadata": {
            "type": "object",
            "title": "caption",
            "properties": {
                "time": {
                    "type": "string",
                    "pattern": "[0-9]+(\\.[0-9]+)?"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "meta"
                    ]
                },
                "text": {
                    "type": "string",
                    "pattern": "^Agenda\\:[0-9]+$"
                },
                "guid": {
                    "type": "string",
                    "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "time",
                "type",
                "text",
                "guid",
                "title"
            ]
        }
    }
}