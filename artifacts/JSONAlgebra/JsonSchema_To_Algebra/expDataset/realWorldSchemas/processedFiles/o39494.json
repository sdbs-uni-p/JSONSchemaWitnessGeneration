{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "description": "schema for an app client",
    "id": "https://raw.githubusercontent.com/eviratec/schema/master/v1/app/client.json#",
    "properties": {
        "app_id": {
            "_format": "uuid",
            "type": "string"
        },
        "id": {
            "_format": "uuid",
            "type": "string"
        },
        "label": {
            "maxLength": 64,
            "type": "string"
        }
    },
    "required": [
        "id",
        "app_id",
        "label"
    ],
    "type": "object"
}