{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "top level oneOf object",
    "type": "array",
    "items": {
        "oneOf": [
            {
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "sport": {
                        "type": "string"
                    }
                },
                "required": [
                    "firstName"
                ]
            },
            {
                "properties": {
                    "vehicle": {
                        "type": "string"
                    },
                    "price": {
                        "type": "integer"
                    }
                },
                "additionalProperties": false
            }
        ]
    }
}