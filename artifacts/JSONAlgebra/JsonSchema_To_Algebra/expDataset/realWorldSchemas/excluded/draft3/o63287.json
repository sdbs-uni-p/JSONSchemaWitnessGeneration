{
    "description": "Represents stock in a checkout process",
    "properties": {
        "items": {
            "items": {
                "description": "Checkout Items",
                "properties": {
                    "price": {
                        "type": "number"
                    },
                    "productId": {
                        "required": true,
                        "type": "string"
                    },
                    "quantity": {
                        "required": true,
                        "type": "integer"
                    },
                    "supplierId": {
                        "required": true,
                        "type": "string"
                    },
                    "total": {
                        "type": "number"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "orderId": {
            "descripiton": "external order id, should be unique",
            "required": true,
            "type": "string"
        },
        "pickup": {
            "oneOf": [
                {
                    "description": "Pickup object id",
                    "type": "string"
                },
                {
                    "description": "Pickup object",
                    "type": "object"
                }
            ]
        },
        "state": {
            "enum": [
                "new",
                "confirmed",
                "cancelled",
                "finalised"
            ],
            "type": "string"
        },
        "user": {
            "description": "User object",
            "properties": {
                "_id": {
                    "required": true,
                    "type": "string"
                },
                "displayName": {
                    "required": true,
                    "type": "string"
                },
                "email": {
                    "required": true,
                    "type": "string"
                },
                "username": {
                    "required": true,
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "type": "object"
}