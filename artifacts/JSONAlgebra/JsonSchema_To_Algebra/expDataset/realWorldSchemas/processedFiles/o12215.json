{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "title": {
            "type": "string"
        },
        "content": {
            "type": "string"
        },
        "status": {
            "type": "integer"
        },
        "publication_date": {
            "description": "string timestamp representing the start date of the booking",
            "type": "string"
        },
        "expiration_date": {
            "description": "string timestamp representing the start date of the booking",
            "type": "string"
        },
        "is_headline": {
            "type": "boolean"
        },
        "thread_id": {
            "type": "integer"
        }
    },
    "required": [
        "title",
        "thread_id"
    ]
}