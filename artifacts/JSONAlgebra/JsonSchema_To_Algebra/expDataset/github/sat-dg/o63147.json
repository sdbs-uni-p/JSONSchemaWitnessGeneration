{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Annotation Value Resource",
    "description": "A single annotation value within a BEL Annotation.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "annotation_value"
    ],
    "properties": {
        "annotation_value": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "type",
                "identifier",
                "name"
            ],
            "properties": {
                "type": {
                    "type": "string"
                },
                "identifier": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "match_text": {
                    "type": "string"
                }
            }
        }
    }
}