{
    "name": "PdSourceEditorWidget",
    "description": "Allows to edit source and mimetype",
    "integration": {
        "technology": "angular",
        "type": "widget"
    },
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
            "source": {
                "type": "object",
                "required": [
                    "resource"
                ],
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic"
                    }
                }
            }
        }
    }
}