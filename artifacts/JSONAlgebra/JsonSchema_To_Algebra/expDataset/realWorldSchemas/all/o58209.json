{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Subscriber Object",
    "type": [
        "object",
        "array"
    ],
    "required": [
        "address"
    ],
    "additionalProperties": false,
    "maxItems": 1000,
    "_uniqueItems": true,
    "items": [
        {
            "$ref": "#"
        }
    ],
    "properties": {
        "address": {
            "type": "string",
            "pattern": "@"
        },
        "first_name": {
            "type": "string",
            "maxLength": 255
        },
        "last_name": {
            "type": "string",
            "maxLength": 255
        }
    }
}