{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "US zip code",
    "description": "US zip code with pattern to validate against",
    "type": "object",
    "properties": {
        "zipCode": {
            "type": "string",
            "pattern": "^[0-9]{5}(-[0-9]{4})?$"
        }
    }
}