{
    "type": "object",
    "title": "Payments schema",
    "$schema": "http://json-schema.org/draft-04/schema",
    "_public_fields": [
        ""
    ],
    "properties": {
        "id": {
            "_db_settings": {
                "required": true,
                "type": "id_field",
                "primary_key": true
            }
        },
        "amount": {
            "_db_settings": {
                "required": false,
                "type": "text"
            }
        },
        "initiated": {
            "_db_settings": {
                "required": true,
                "type": "datetime",
                "default": "{{datetime.datetime.now}}"
            }
        },
        "recieved": {
            "_db_settings": {
                "required": false,
                "type": "datetime",
                "onupdate": "{{datetime.datetime.now}}"
            }
        },
        "fk_order_id": {
            "type": [
                "integer",
                "null"
            ],
            "_db_settings": {
                "type": "foreign_key",
                "ref_document": "Order",
                "ref_column": "order.id",
                "ref_column_type": "integer"
            }
        },
        "fk_paymentmethod_name": {
            "type": [
                "integer",
                "null"
            ],
            "_db_settings": {
                "type": "foreign_key",
                "required": true,
                "ref_document": "Paymentmethod",
                "ref_column": "paymentmethod.name",
                "ref_column_type": "string"
            }
        }
    }
}