{
    "name": "widget-listing-activity",
    "description": "Reads a file listing and extracts information on available widgets and activities.",
    "integration": {
        "technology": "angular",
        "type": "activity"
    },
    "compatibility": [
        "json-patch"
    ],
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "required": [
            "widgetListing"
        ],
        "properties": {
            "fileListing": {
                "type": "object",
                "description": "Extract widget information from a file listing.",
                "properties": {
                    "list": {
                        "type": "array",
                        "description": "A list with json files which contain information about used widgets.",
                        "default": [
                            "widget-list.json"
                        ],
                        "items": {
                            "type": "string"
                        }
                    },
                    "applicationUrl": {
                        "type": "string",
                        "description": "The url of the application with the widgets. Default is the application in which the activity is included.",
                        "default": ""
                    }
                }
            },
            "widgetListing": {
                "type": "object",
                "required": [
                    "resource"
                ],
                "description": "Provide a list of available widgets and activities as a resource.",
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic",
                        "axRole": "outlet",
                        "description": "The list resource topic."
                    }
                }
            }
        }
    }
}