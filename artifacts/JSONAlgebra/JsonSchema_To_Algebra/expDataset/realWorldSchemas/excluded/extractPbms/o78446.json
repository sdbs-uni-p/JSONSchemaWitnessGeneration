{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "anyOf": [
            {
                "fw_core": {
                    "type": "object",
                    "properties": {
                        "anyOf": [
                            {
                                "name": "$matches(${q:string})"
                            },
                            {
                                "short_name": "$matches(${q:string})"
                            },
                            {
                                "label": "$matches(${q:string})"
                            },
                            {
                                "description": "$matches(${q:string})"
                            }
                        ]
                    }
                }
            },
            {
                "fw_contact": {
                    "type": "object",
                    "properties": {
                        "anyOf": [
                            {
                                "visit": "$matches(${q:string})"
                            },
                            {
                                "postal": "$matches(${q:string})"
                            }
                        ]
                    }
                }
            }
        ]
    }
}