          "type": "boolean"
        },
        "isGuest": {
          "type": "boolean"
        },
        "isA": {
          "type": "string"
        },
        "rateLimit": {
          "type": "object",
          "properties": {
            "numOfRequests": {
              "type": "integer",
              "minimum": 0
            },
            "refreshTime": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": [
            "numOfRequests",
            "refreshTime"
          ]
        }
      },
      "required": [
        "name"
      ]
    },
    "check": {
      "type": "string"
    },
    "index": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "minItems": 0
    },
    "resource": {
      "type": "object",
      "properties": {
        "name": {
