                        "env": {
                          "$ref": "#/definitions/azure-iot-edgeagent-deployment-1_1_json_defs_env"
                        },
                        "imagePullPolicy": {
                          "$ref": "#/definitions/azure-iot-edgeagent-deployment-1_1_json_defs_imagePullPolicy"
                        }
                      }
                    },
                    "edgeHub": {
                      "type": "object",
                      "title": "The Edgehub Schema",
                      "required": [
                        "type",
