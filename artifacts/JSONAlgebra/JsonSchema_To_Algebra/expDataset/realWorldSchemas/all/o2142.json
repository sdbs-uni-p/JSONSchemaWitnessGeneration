{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Verify annotation is of `type` Annotation",
    "type": "object",
    "properties": {
        "type": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "^Annotation$"
                },
                {
                    "type": "array",
                    "anyOf": [
                        {
                            "type": "string",
                            "pattern": "^Annotation$"
                        }
                    ]
                }
            ],
            "not": {
                "type": "object"
            }
        }
    },
    "required": [
        "type"
    ]
}