{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "description": "Chat user JSON schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 12
        },
        "avatar": {
            "type": "string",
            "format": "uri"
        },
        "role": {
            "type": "string"
        },
        "isConnected": {
            "type": "boolean"
        }
    }
}