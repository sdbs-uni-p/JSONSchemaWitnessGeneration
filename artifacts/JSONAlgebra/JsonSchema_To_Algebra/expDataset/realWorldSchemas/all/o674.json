{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Manifest",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": [
                "null",
                "string"
            ]
        },
        "name": {
            "type": [
                "null",
                "string"
            ]
        },
        "description": {
            "type": [
                "null",
                "string"
            ]
        },
        "version": {
            "$ref": "#/definitions/SemanticVersion"
        },
        "company": {
            "type": [
                "null",
                "string"
            ]
        },
        "authors": {
            "type": [
                "null",
                "string"
            ]
        },
        "copyright": {
            "type": [
                "null",
                "string"
            ]
        },
        "license": {
            "type": [
                "null",
                "string"
            ]
        },
        "website": {
            "type": [
                "null",
                "string"
            ]
        },
        "repository": {
            "type": [
                "null",
                "string"
            ]
        },
        "icon": {
            "type": [
                "null",
                "string"
            ]
        },
        "releaseNotes": {
            "type": [
                "null",
                "string"
            ]
        },
        "tags": {
            "type": [
                "null",
                "string"
            ]
        },
        "branchVersionMap": {
            "type": [
                "null",
                "object"
            ],
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "definitions": {
        "SemanticVersion": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "major": {
                    "type": "integer",
                    "format": "int32"
                },
                "minor": {
                    "type": "integer",
                    "format": "int32"
                },
                "patch": {
                    "type": "integer",
                    "format": "int32"
                }
            }
        }
    }
}