{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "deviceIds": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[A-Fa-f\\d]{24}$"
            }
        },
        "deviceTags": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "additionalProperties": false
}