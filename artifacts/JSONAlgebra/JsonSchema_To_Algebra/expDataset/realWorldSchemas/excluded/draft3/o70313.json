{
    "additionalProperties": false,
    "description": "Server",
    "links": [
        {
            "href": "/servers/{id}",
            "rel": "self"
        },
        {
            "href": "/servers",
            "rel": "collection"
        }
    ],
    "properties": {
        "created_at": {
            "description": "Date and time of server creation",
            "format": "date-time",
            "readonly": true,
            "type": "string"
        },
        "id": {
            "description": "Server Identifier",
            "pattern": "^([0-9a-fA-F]){8}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){12}$",
            "readonly": true,
            "type": "string"
        },
        "name": {
            "description": "Server DNS name",
            "format": "host-name",
            "maxLength": 255,
            "required": true,
            "type": "string"
        },
        "updated_at": {
            "description": "Date and time of last server update",
            "format": "date-time",
            "readonly": true,
            "type": [
                "string",
                "null"
            ]
        }
    },
    "title": "server"
}