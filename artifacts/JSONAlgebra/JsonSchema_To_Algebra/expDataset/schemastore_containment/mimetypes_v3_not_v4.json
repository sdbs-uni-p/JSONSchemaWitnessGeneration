{
  "allOf": [
    {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "additionalProperties": false,
      "patternProperties": {
        "^\\..+": {
          "description": "A file extension mapping.",
          "pattern": "^[\\w-_.]+/[\\w-_.]+$"
        }
      },
      "title": "JSON Schema for mime type collections",
      "type": "object"
    },
    {
      "not": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "additionalProperties": false,
        "patternProperties": {
          "^\\..+": {
            "description": "A file extension",
            "pattern": "^[\\w-_.]+/[\\w-_.]+$",
            "examples": [
              "application/json"
            ]
          }
        },
        "title": "Mime types",
        "type": "object"
      }
    }
  ]
}
