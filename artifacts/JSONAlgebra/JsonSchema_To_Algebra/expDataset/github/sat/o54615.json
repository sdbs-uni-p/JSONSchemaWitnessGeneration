{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer"
            },
            "author": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "email"
                ]
            },
            "lastChangedBy": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "email"
                ]
            },
            "lastChanged": {
                "type": "string"
            },
            "title": {
                "type": "string"
            },
            "text": {
                "type": "string"
            },
            "files": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "url": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "name",
                        "url"
                    ]
                }
            }
        },
        "required": [
            "id",
            "author",
            "lastChangedBy",
            "lastChanged",
            "title",
            "text",
            "files"
        ]
    }
}