{
  "type": "object",
  "properties": {
    "amount": {
      "type": "string",
      "pattern": "^[-]?\\d*\\.?\\d+$"
    },
    "currency": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]{3}$",
      "minLength": 3,
      "maxLength": 3
    }
  },
  "required": [
    "amount",
    "currency"
  ]
}