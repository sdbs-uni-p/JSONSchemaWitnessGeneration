{
    "type": "object",
    "$schema": "http://json-schema.org/draft-04/schema",
    "required": [
        "swaggerVersion",
        "apiVersion",
        "apis"
    ],
    "properties": {
        "apiVersion": {
            "type": "string"
        },
        "swaggerVersion": {
            "enum": [
                "1.2"
            ]
        },
        "apis": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "required": [
                        "path",
                        "description"
                    ],
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    }
}