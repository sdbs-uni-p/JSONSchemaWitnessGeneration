{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://d-pac.be/schemas/pluginmanifest.json",
    "name": "pluginmanifest",
    "title": "D-PAC plugin manifest",
    "required": true,
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "d-pac": {
            "title": "Main d-pac manifest",
            "type": "array",
            "required": true,
            "uniqueItems": true,
            "items": {
                "title": "Plugin declarations",
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "required": true,
                        "title": "plugin name"
                    },
                    "description": {
                        "type": "string",
                        "required": true,
                        "title": "A description of the plugin"
                    },
                    "type": {
                        "type": "string",
                        "required": true,
                        "title": "The type of the plugin",
                        "enum": [
                            "select"
                        ]
                    },
                    "entry": {
                        "type": "string",
                        "required": false,
                        "title": "The main access point to your plugin, by default the same value as `type` is assumed."
                    }
                }
            }
        }
    }
}