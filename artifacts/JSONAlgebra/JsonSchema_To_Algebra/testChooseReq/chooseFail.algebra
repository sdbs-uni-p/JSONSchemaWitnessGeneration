"root" defs [
   "root" : allOf [ type[obj], ref("a"), ref("b"), ref("c") ],
    "a" : pattReq [ "^b$" : { type[num] } ],
    "b" : pattReq [ "^(a|c)$" : { type[bool] } ],  // it works if you substitute
                                                   // (a|c) with (a|b)
    "c" : pattReq [ "^(a|b|c)$" : { type[arr] } ]
]
