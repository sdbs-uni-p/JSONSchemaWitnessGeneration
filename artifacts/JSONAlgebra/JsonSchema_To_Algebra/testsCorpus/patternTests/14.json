{
  "type": "object",
  "version": "0.1.0",
  "properties": {
    "version": {
      "type": "string",
      "description": "API call version",
      "pattern": "^(\\d+\\.)?(\\d+\\.)?(\\*|\\d+)$"
    },
    "uri": {
      "type": "string",
      "description": "The json call URI"
    },
    "secure": {
      "type": "boolean",
      "description": "The call must be secure and user must be logged in"
    },
    "description": {
      "type": "string",
      "description": "API call description"
    }
  },
  "required": [
    "version",
    "uri",
    "secure"
  ]
}