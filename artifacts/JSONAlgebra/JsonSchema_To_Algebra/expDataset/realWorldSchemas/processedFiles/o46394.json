{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "warningCount": {
            "title": "Warning count",
            "description": "The number of validation warning messages",
            "type": "number",
            "example": "10"
        },
        "errorCount": {
            "title": "Error count",
            "description": "The number of validation error messages",
            "type": "number",
            "example": "10"
        },
        "messages": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "title": "Id",
                        "description": "The message identifier.",
                        "type": "string",
                        "example": "C00001",
                        "pattern": "^C[0-9]{5}$"
                    },
                    "type": {
                        "title": "Type",
                        "description": "The type of message. Must be one of: error, warning",
                        "type": "string",
                        "example": "warning"
                    },
                    "text": {
                        "title": "Text",
                        "description": "The message content",
                        "type": "string",
                        "example": "You have entered a large amount in total Gift Aid payments. Please check."
                    }
                },
                "required": [
                    "type",
                    "id"
                ]
            }
        }
    },
    "required": [
        "messages"
    ],
    "additionalProperties": false
}