{
    "$linkedData": {
        "book": {
            "path": [
                "/bibles",
                "/{bibleId}",
                "/books",
                "/{bookId}"
            ],
            "schema": "book",
            "type": "single"
        },
        "verses": {
            "path": [
                "/bibles",
                "/{bibleId}",
                "/books",
                "/{bookId}",
                "/chapters",
                "/{chapterId}",
                "/verses"
            ],
            "schema": "verse",
            "type": "collection"
        }
    },
    "description": "Chapter of a book.",
    "properties": {
        "bookId": {
            "required": true,
            "type": "integer"
        },
        "chapterId": {
            "required": true,
            "type": "integer"
        },
        "number": {
            "required": true,
            "type": "string"
        }
    },
    "type": "object"
}