{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "name": "Entity",
  "description": "Represent an Entity in the ER model",
  "type": "object",
  "properties": {
    "$schema": {
        "enum": [
          "http://json-schema.org/draft-04/schema#"
        ]
    },
    "$schema-location": {
        "enum": [
          "Entity-Schema-v2.json"
        ]
    },
    "name": {
      "description": "name of the Entity",
      "type": "string"
    },
    "version": {
      "description": "version",
      "type": "string"
    },
    "author": {
      "description": "name of the author",
      "type": "string"
    },
    "description": {
      "description": "human readable description",
      "type": "string"
    },
    "associated-tool": {
      "description": "name of the associated tool (eg- Docker-Rest-API)",
      "type": "string"
    },
    "type": {
      "enum": [
        "object"
      ]
    },
    "properties": {
      "type": "object",
      "properties": {
        "$schema-location": {
          "type": "object",
          "properties": {
            "type": {
              "type": "object",
              "properties": {
                "enum": {
                    "enum": [
                      "##Add your Schema location here##"
                    ]
                }
              }
            }
          }
        },
        "id": {
          "type": "object",
          "properties": {
            "type": {
              "enum": [
                "string"
              ]
            },
            "required": {
              "enum": [
                true
              ]
            }
          }
        }
      },
      "patternProperties": {
        "^(?!id)([a-zA-Z0-9_]+)$": {
          "type": "object",
          "properties": {
            "type": {
              "description": "data type of the attribute",
                "enum": [
                  "string",
                  "number",
                  "integer",
                  "boolean"
                ]
            },
            "default-value": {
              "description": "default-value for the attribute",
              "type": "string"
            },
            "required": {
              "description": "required or not?",
              "type": "boolean"
            },
            "description": {
              "description": "human readable description for the attribute",
              "type": "string"
            }
          }
        }
      }
    }
  }
}
