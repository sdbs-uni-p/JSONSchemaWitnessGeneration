{
    "user": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "id": "http://something.gov/rels/user",
        "title": "User",
        "type": "object",
        "properties": {
            "id": {
                "title": "Identifier",
                "description": "The unique identifier",
                "type": "integer"
            },
            "email": {
                "title": "Email",
                "description": "An email address",
                "type": "string",
                "format": "email",
                "maxLength": 255
            },
            "name": {
                "title": "name",
                "description": "The user's name",
                "type": "string",
                "maxLength": 255
            },
            "password": {
                "title": "Password",
                "description": "A hash of the users password",
                "type": "string",
                "required": "true"
            },
            "role": {
                "title": "Role",
                "description": "The role assigned to the user",
                "enum": [
                    "anonymous",
                    "authenticated",
                    "admin"
                ]
            },
            "status": {
                "title": "Status",
                "description": "The status of the user",
                "enum": [
                    "created",
                    "banned",
                    "authorized"
                ]
            },
            "created": {
                "title": "Created At",
                "description": "Timestamp when created",
                "type": "string",
                "format": "date-time"
            },
            "modified": {
                "title": "Modified At",
                "description": "Timestamp when last modified",
                "type": "string",
                "format": "date-type"
            }
        }
    },
    "organization": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "id": "http://www.something.gov/rels/organization",
        "title": "Organization",
        "description": "A hierarchical collection of datasets who share communications about items",
        "type": "object",
        "properties": {
            "created": {
                "title": "Created At",
                "description": "Timestamp when created",
                "type": "string",
                "format": "date-time"
            },
            "modified": {
                "title": "Modified At",
                "description": "Timestamp when last modified",
                "type": "string",
                "format": "date-type"
            }
        }
    }
}