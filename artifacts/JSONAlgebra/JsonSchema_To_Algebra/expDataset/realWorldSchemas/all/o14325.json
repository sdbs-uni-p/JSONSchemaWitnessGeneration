{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://sqp.org/types/date",
    "type": "array",
    "title": "Date value schema",
    "description": "A Date value",
    "name": "SqpDate",
    "items": [
        {
            "id": "http://sqp.org/date/year",
            "type": "integer",
            "title": "Year value",
            "description": "The year of the date in gregorian calendar. Negative values is B.C.",
            "name": "year"
        },
        {
            "id": "http://sqp.org/date/month",
            "type": "integer",
            "maximum": 12,
            "minimum": 1,
            "title": "Month value",
            "description": "Month in the Gregorian calendar. 1 is January",
            "name": "month"
        },
        {
            "id": "http://sqp.org/date/day",
            "type": "integer",
            "maximum": 31,
            "minimum": 1,
            "title": "Day value",
            "description": "Day of month",
            "name": "day"
        }
    ],
    "minItems": 3,
    "additionalItems": false
}