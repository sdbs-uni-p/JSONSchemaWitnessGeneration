{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "email": {
            "_format": "email",
            "type": "string"
        },
        "first": {
            "type": "string"
        },
        "last": {
            "type": "string"
        },
        "password": {
            "minLength": 8,
            "type": "string"
        },
        "roles": {
            "type": "array"
        },
        "username": {
            "minLength": 3,
            "type": "string"
        },
        "verification": {
            "type": "string"
        },
        "verified": {
            "type": "boolean"
        }
    },
    "required": [
        "email",
        "first",
        "last",
        "username",
        "verified",
        "roles"
    ],
    "title": "user schema",
    "type": "object"
}