{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for <%= lambdaFunctionName %>",
    "properties": {
        "user": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "minLength": 1
                },
                "lastName": {
                    "type": "string",
                    "minLength": 1
                },
                "middleName": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [
                "firstName",
                "lastName"
            ]
        }
    },
    "required": [
        "user"
    ]
}