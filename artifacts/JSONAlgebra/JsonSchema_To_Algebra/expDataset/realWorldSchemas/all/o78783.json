{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "name": "user",
    "type": "object",
    "properties": {
        "name": {
            "type": "object",
            "properties": {
                "first": {
                    "type": "string"
                },
                "middle": {
                    "type": "string"
                },
                "last": {
                    "type": "string"
                }
            },
            "required": [
                "first",
                "last"
            ]
        },
        "bday": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "name"
    ]
}