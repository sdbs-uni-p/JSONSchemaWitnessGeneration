{
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "baseUrl": {
      "type": "string",
      "pattern": "^(http(s)?\\:\\/\\/(([a-zA-Z0-9]+((\\.|\\-)[a-zA-Z0-9]+)+)|(localhost))(\\:\\d+)?(\\/[\\w\\-]+)*(\\/?|\\/\\w+\\.[a-zA-Z]{2,4}(\\?[\\w]+\\=[\\w\\-]+)?)?(\\&[\\w]+\\=[\\w\\-]+)*)$"
    },
    "dataFormats": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([\\w.+-]+/[\\w.+-]+)$"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "authenticationMechanism": {
      "type": "string"
    },
    "encoding": {
      "type": "string"
    },
    "timeZone": {
      "type": "string"
    },
    "dateFormat": {
      "type": "string"
    },
    "roles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/role"
      },
      "uniqueItems": true,
      "minItems": 0
    },
    "database": {
      "type": "object",
      "properties": {
        "dbms": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "prefix": {
          "type": "string"
        },
        "admin": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "password"
          ]
        }
      }
    },
    "types": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/field"
      },
      "uniqueItems": true,
      "minItems": 0
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/resource"
      },
      "uniqueItems": true,
      "minItems": 1
    }
  },
  "required": [
    "baseUrl",
    "dataFormats",
    "database",
    "resources"
  ],
  "additionalProperties": true,
