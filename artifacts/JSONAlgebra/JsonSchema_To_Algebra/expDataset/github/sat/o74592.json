{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Dashboards",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "layout": {
            "type": "object",
            "properties": {
                "^\\w+$": {
                    "type": "object",
                    "properties": {
                        "col": {
                            "type": "number"
                        },
                        "row": {
                            "type": "number"
                        },
                        "size_x": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "col",
                        "row",
                        "size_x"
                    ]
                }
            }
        }
    },
    "required": [
        "name"
    ]
}