{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "PlantillaAlarm Schema",
    "type": "object",
    "required": [
        "Alarm"
    ],
    "properties": {
        "Alarm": {
            "type": "string",
            "$ref": "#/datos"
        }
    },
    "datos": {
        "description": "Info Plantilla Alarm",
        "type": "object",
        "required": [
            "timestamp",
            "assetId",
            "severity"
        ],
        "properties": {
            "timestamp": {
                "type": "object",
                "required": [
                    "$date"
                ],
                "properties": {
                    "$date": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "additionalProperties": false
            },
            "assetId": {
                "type": "string"
            },
            "severity": {
                "type": "string",
                "enum": [
                    "LOW",
                    "MEDIUM",
                    "HIGH",
                    "CRITICAL"
                ]
            },
            "alarmSource": {
                "type": "string"
            },
            "details": {
                "type": "string"
            },
            "status": {
                "type": "string"
            }
        }
    }
}