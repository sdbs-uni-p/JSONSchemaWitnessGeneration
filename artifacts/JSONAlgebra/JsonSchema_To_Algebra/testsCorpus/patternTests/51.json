        },
        "onDelete": {
          "type": "string"
        },
        "onUpdate": {
          "type": "string"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/field"
          },
          "uniqueItems": true,
          "minItems": 0
        },
        "check": {
          "$ref": "#/definitions/check"
        },
        "index": {
          "$ref": "#/definitions/index"
        }
      },
      "required": [
        "with",
        "type"
      ]
    },
    "aclSimple": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/basicName"
      },
      "uniqueItems": true,
      "minItems": 0
    },
    "acl": {
      "oneOf": [
        {
          "$ref": "#/definitions/aclSimple"
        },
        {
          "type": "object",
          "properties": {
            "read": {
