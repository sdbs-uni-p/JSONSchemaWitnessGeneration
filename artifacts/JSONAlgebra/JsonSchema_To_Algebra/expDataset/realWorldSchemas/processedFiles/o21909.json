{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Ember CLI Config Schema",
    "type": "object",
    "properties": {
        "port": {
            "description": "Server port (4200 by default)",
            "type": "number",
            "default": 4200
        },
        "host": {
            "description": "Listens on all interfaces by default",
            "type": "string"
        },
        "proxy": {
            "description": "Server proxy",
            "type": "string"
        },
        "insecure-proxy": {
            "description": "Set false to proxy self-signed SSL certificates",
            "type": "boolean",
            "default": false
        },
        "watcher": {
            "description": "Watcher",
            "type": "string",
            "default": "events"
        },
        "live-reload": {
            "description": "Enable live reload",
            "type": "boolean",
            "default": true
        },
        "live-reload-host": {
            "description": "Defaults to host",
            "type": "string"
        },
        "live-reload-port": {
            "description": "Defaults to port number within [49152...65535])",
            "type": "number",
            "default": 49152
        },
        "environment": {
            "description": "Environement",
            "enum": [
                "development",
                "production"
            ],
            "default": "development"
        },
        "output-path": {
            "description": "Output path",
            "type": "string",
            "default": "dist/"
        },
        "ssl": {
            "description": "Enable SSL",
            "type": "boolean",
            "default": false
        },
        "ssl-key": {
            "description": "SSL key",
            "type": "string",
            "default": "ssl/server.key"
        },
        "ssl-cert": {
            "description": "SSL certificate",
            "type": "string",
            "default": "ssl/server.crt"
        }
    }
}