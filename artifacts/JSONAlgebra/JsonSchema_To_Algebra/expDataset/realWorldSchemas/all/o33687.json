{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "debug": {
            "type": "boolean"
        },
        "router-config": {
            "type": "string"
        },
        "cache-dir": {
            "type": "string"
        },
        "logger-dir": {
            "type": "string"
        },
        "template-dir": {
            "type": "string"
        },
        "template-file-extension": {
            "type": "string"
        },
        "serializer-model-dir": {
            "type": "string"
        },
        "schema-dir": {
            "type": "string"
        },
        "support-contact": {
            "type": "string"
        },
        "database": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                },
                "database": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "smtp": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "security": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "debug",
        "router-config",
        "logger-dir",
        "support-contact",
        "serializer-model-dir",
        "schema-dir"
    ]
}