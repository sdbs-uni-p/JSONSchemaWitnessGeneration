{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Team size",
    "description": "Team sizes for play day competitions",
    "type": "object",
    "properties": {
        "size": {
            "anyOf": [
                {
                    "type": "integer",
                    "minimum": 2,
                    "maximum": 4
                },
                {
                    "type": "integer",
                    "minimum": 4,
                    "maximum": 6
                },
                {
                    "type": "integer",
                    "minimum": 8,
                    "maximum": 10
                },
                {
                    "type": "integer",
                    "minimum": 10,
                    "maximum": 12
                }
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "size"
    ]
}