{
    "type": "object",
    "title": "Membership schema",
    "$schema": "http://json-schema.org/draft-04/schema",
    "_public_fields": [
        ""
    ],
    "properties": {
        "id": {
            "_db_settings": {
                "required": true,
                "type": "id_field",
                "primary_key": true
            }
        },
        "start": {
            "_db_settings": {
                "required": false,
                "type": "datetime",
                "default": "{{datetime.datetime.now}}",
                "onupdate": "{{datetime.datetime.now}}"
            }
        },
        "end": {
            "_db_settings": {
                "required": false,
                "type": "datetime",
                "default": "{{datetime.datetime.now}}"
            }
        },
        "intervals": {
            "_db_settings": {
                "type": "choice",
                "choices": [
                    "weekly",
                    "monthly",
                    "annually",
                    "biannually"
                ],
                "default": "weekly"
            }
        },
        "reoccuring": {
            "_db_settings": {
                "type": "choice",
                "choices": [
                    "yes",
                    "no"
                ],
                "default": "no"
            }
        },
        "key": {
            "_db_settings": {
                "required": false,
                "unique": true,
                "type": "text"
            }
        },
        "fk_contact_id": {
            "_db_settings": {
                "type": "foreign_key",
                "required": true,
                "ref_document": "Contact",
                "ref_column": "contact.id",
                "ref_column_type": "id_field"
            }
        },
        "fk_order_id": {
            "_db_settings": {
                "type": "foreign_key",
                "required": true,
                "ref_document": "Order",
                "ref_column": "order.id",
                "ref_column_type": "id_field"
            }
        }
    }
}