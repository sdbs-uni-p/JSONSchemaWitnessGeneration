{
    "title": "Personal Productivity File Format (.prod)",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/Nurdok/dotprod/master/dotprod",
    "type": "object",
    "properties": {
        "stuff": {
            "$ref": "#/definitions/stuff"
        },
        "tasks": {
            "$ref": "#/definitions/tasks"
        },
        "someday": {
            "$ref": "#/definitions/someday"
        },
        "routines": {
            "$ref": "#/definitions/routines"
        },
        "templates": {
            "$ref": "#/definitions/templates"
        }
    },
    "definitions": {
        "id": {
            "description": "A unique identifier",
            "type": "integer",
            "minimum": 1,
            "exclusiveMinimum": false
        },
        "summary": {
            "description": "A short summary",
            "type": "string"
        },
        "frequencyTypes": {
            "description": "Namespace for various frequency types",
            "interval": {
                "description": "A simple interval with specified time units",
                "type": "object",
                "properties": {
                    "units": {
                        "description": "The time units for the interval",
                        "type": "string",
                        "enum": [
                            "hour",
                            "day",
                            "week",
                            "month",
                            "year"
                        ]
                    },
                    "interval": {
                        "type": "integer",
                        "minimum": 1,
                        "exclusiveMinimum": false
                    }
                },
                "required": [
                    "units",
                    "interval"
                ]
            }
        },
        "frequency": {
            "description": "A time frequency for a routine",
            "oneOf": [
                {
                    "$ref": "#/definitions/frequencyTypes/interval"
                }
            ]
        },
        "timeOfDay": {},
        "stuff": {},
        "tasks": {
            "description": "A list of tasks",
            "type": "array",
            "items": {
                "$ref": "#/definitions/task"
            }
        },
        "task": {
            "description": "A thing that needs to be done",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "summary": {
                    "$ref": "#/definitions/summary"
                }
            },
            "required": [
                "id",
                "summary"
            ]
        },
        "someday": {},
        "routines": {
            "description": "A list of routines",
            "type": "array",
            "items": {
                "$ref": "#/definitions/routine"
            }
        },
        "routine": {
            "description": "A thing that needs to be done in a certain frequency",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "summary": {
                    "$ref": "#/definitions/summary"
                },
                "frequency": {
                    "$ref": "#/definitions/frequency"
                },
                "timeOfDay": {
                    "$ref": "#/definitions/timeOfDay"
                }
            },
            "required": [
                "id",
                "summary",
                "frequency"
            ]
        },
        "templates": {}
    }
}