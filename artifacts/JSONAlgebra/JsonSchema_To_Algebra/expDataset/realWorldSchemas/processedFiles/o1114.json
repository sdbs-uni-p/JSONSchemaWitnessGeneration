{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "type",
        "value"
    ],
    "properties": {
        "type": {
            "type": "string"
        },
        "value": {
            "type": "string"
        },
        "mask": {
            "type": "string"
        },
        "public": {
            "type": "boolean"
        },
        "source": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "favicon": {
                    "type": "string"
                }
            }
        }
    }
}