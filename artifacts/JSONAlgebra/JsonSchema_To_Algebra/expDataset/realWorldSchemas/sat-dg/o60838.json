{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "minItems": 1,
    "_uniqueItems": true,
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "null"
                    }
                ]
            },
            "version": {
                "type": "string"
            },
            "manufacturer": {
                "type": "string"
            }
        },
        "required": [
            "name",
            "version",
            "manufacturer"
        ]
    }
}