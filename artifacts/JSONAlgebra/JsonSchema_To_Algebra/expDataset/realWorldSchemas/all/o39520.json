{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "billing": {
            "description": "my description",
            "type": "string"
        },
        "other string": {
            "description": "otherdescription",
            "type": "string"
        },
        "direction": {
            "type": "string",
            "enum": [
                "N",
                "E",
                "S",
                "W"
            ]
        },
        "angle": {
            "type": "integer",
            "enum": [
                0,
                90,
                180,
                270
            ]
        },
        "morespecials": {
            "type": "array",
            "items": [
                {
                    "description": "extraspecial_number_description",
                    "type": "number"
                },
                {
                    "description": "extraspecial_string_description",
                    "type": "string"
                }
            ]
        },
        "someObject": {
            "type": "object",
            "properties": {
                "test": {
                    "description": "nestedObject description",
                    "type": "string"
                }
            }
        }
    }
}