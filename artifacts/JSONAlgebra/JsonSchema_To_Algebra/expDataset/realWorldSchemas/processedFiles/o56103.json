{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "info": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "category": {
                    "type": "null"
                },
                "user": {
                    "type": "string"
                },
                "cook_time": {
                    "type": "string"
                },
                "date": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "image": {
                    "type": "string"
                }
            },
            "required": [
                "title",
                "description"
            ]
        },
        "ingredients": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ingredient": {
                        "type": "string"
                    },
                    "qty": {
                        "type": "string"
                    }
                },
                "required": [
                    "ingredient",
                    "qty"
                ]
            }
        },
        "directions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "direction": {
                        "type": "string"
                    },
                    "step": {
                        "type": "integer"
                    }
                },
                "required": [
                    "id",
                    "direction",
                    "step"
                ]
            }
        }
    },
    "required": [
        "info",
        "ingredients",
        "directions"
    ]
}