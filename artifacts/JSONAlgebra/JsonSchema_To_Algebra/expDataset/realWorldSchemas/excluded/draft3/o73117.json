{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "description": "Employee's unique identifier",
            "type": "string",
            "maxLength": 32,
            "required": true
        },
        "code": {
            "description": "Employee's code. It should be unique.",
            "type": "string",
            "maxLength": 50,
            "required": true
        },
        "firstName": {
            "desription": "Employee's first name",
            "type": "string",
            "maxLength": 50,
            "required": true
        },
        "middleName": {
            "desription": "Employee's middle name",
            "type": "string",
            "maxLength": 50,
            "required": false
        },
        "lastName": {
            "desription": "Employee's last name",
            "type": "string",
            "maxLength": 50,
            "required": true
        },
        "dateOfBirth": {
            "description": "Employee's Birth date. Date format is YYYY/MM/DD",
            "type": "string",
            "example": "2015/01/01",
            "maxLength": 25,
            "required": true
        },
        "addressLine1": {
            "desription": "Employee's address line 1",
            "type": "string",
            "maxLength": 255,
            "required": true
        },
        "addressLine2": {
            "desription": "Employee's address line 2",
            "type": "string",
            "maxLength": 255,
            "required": false
        },
        "city": {
            "desription": "Employee's city",
            "type": "string",
            "maxLength": 50,
            "required": true
        },
        "state": {
            "desription": "Employee's state",
            "type": "string",
            "maxLength": 50,
            "required": true
        },
        "country": {
            "desription": "Employee's country. Country should be valid and can set enum for country.",
            "type": "string",
            "maxLength": 50,
            "required": true
        },
        "pinCode": {
            "desription": "Employee's area pin code",
            "type": "string",
            "maxLength": 8,
            "example": "358923",
            "required": true
        },
        "phone": {
            "desription": "Employee's phone number. Phone number should be valid number.",
            "type": "string",
            "maxLength": 20,
            "pattern": "^+('d{2})-(d{10})$",
            "example": "+91-9867542310",
            "required": true
        },
        "email": {
            "desription": "Employee's email address",
            "type": "string",
            "maxLength": 100,
            "pattern": "^[_a-z0-9-]+(.[_a-z0-9-]+)*@[a-z0-9-]+(.[a-z0-9-]+)*(.[a-z]{2,4})$",
            "required": true
        },
        "gender": {
            "desription": "Employee's gender",
            "type": "string",
            "enum": [
                "Male",
                "Female"
            ],
            "required": true
        },
        "dateOfJoining": {
            "desription": "Employee's joining date. Date format is YYYY/MM/DD.",
            "type": "string",
            "maxLength": 10,
            "example": "2015/12/01",
            "required": true
        },
        "isActive": {
            "desription": "Defines Employee is active or not",
            "type": "boolean",
            "required": true
        }
    }
}