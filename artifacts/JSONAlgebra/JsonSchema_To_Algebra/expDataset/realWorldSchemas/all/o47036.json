{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "IoTOSHI Sensor Event Schema",
    "properties": {
        "cpu": {
            "description": "CPU utilization (%)",
            "type": "number",
            "minimum": 0.0,
            "maximum": 100.0,
            "default": 0.0
        },
        "memory": {
            "description": "Memory utilization (%)",
            "type": "number",
            "minimum": 0.0,
            "maximum": 100.0,
            "default": 0.0
        }
    },
    "required": [
        "cpu",
        "memory"
    ]
}