{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "tcheckbox",
    "description": "A tcheckbox atom with optional label",
    "type": "object",
    "properties": {
        "tag": {
            "enum": [
                "div",
                "li",
                "span"
            ]
        },
        "label": {
            "type": "string"
        },
        "inputId": {
            "type": "string"
        },
        "inputName": {
            "type": "string"
        },
        "inputValue": {
            "type": "string"
        },
        "checked": {
            "type": "boolean"
        },
        "_state": {
            "enum": [
                "",
                "disabled"
            ]
        }
    },
    "required": [
        "tag",
        "inputId",
        "inputName",
        "inputValue"
    ],
    "dependencies": {}
}