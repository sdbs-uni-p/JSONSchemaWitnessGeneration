{
    "name": "widget-information-widget",
    "description": "The widget-information-widget presents details of a widget or activity.",
    "integration": {
        "technology": "angular",
        "type": "widget"
    },
    "compatibility": [
        "json-patch"
    ],
    "styleSource": "scss/widget-information-widget.scss",
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "required": [
            "widget"
        ],
        "properties": {
            "widget": {
                "type": "object",
                "description": "Display information from a resource with the data of a widget.json.",
                "required": [
                    "resource"
                ],
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic",
                        "axRole": "inlet",
                        "description": "The topic of the resource with content of a widget.json."
                    }
                }
            },
            "package": {
                "type": "object",
                "description": "Display version and dependencies of a widget from a resource with the data of a package.json.",
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic",
                        "axRole": "inlet",
                        "description": "The topic of the resource with content of a package.json."
                    }
                }
            }
        }
    }
}