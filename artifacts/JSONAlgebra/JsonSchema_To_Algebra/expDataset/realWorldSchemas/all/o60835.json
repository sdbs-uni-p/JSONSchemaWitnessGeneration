{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "minItems": 1,
    "_uniqueItems": true,
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "null"
                    }
                ]
            },
            "manufacturer": {
                "type": "string"
            },
            "type": {
                "type": "string"
            },
            "version": {
                "type": "object",
                "properties": {
                    "class": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    },
                    "search": {
                        "anyOf": [
                            {
                                "type": "array"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    }
                },
                "required": [
                    "class",
                    "search"
                ]
            }
        },
        "required": [
            "name",
            "manufacturer",
            "type",
            "version"
        ]
    }
}