{
    "additionalProperties": false,
    "description": "Domain",
    "links": [
        {
            "href": "/domains/{id}",
            "rel": "self"
        },
        {
            "href": "/domains/{id}/records",
            "rel": "records"
        },
        {
            "href": "/domains/{id}/servers",
            "rel": "servers"
        },
        {
            "href": "/domains",
            "rel": "collection"
        }
    ],
    "properties": {
        "created_at": {
            "description": "Date and time of domain creation",
            "format": "date-time",
            "readonly": true,
            "type": "string"
        },
        "description": {
            "description": "Description for the Domain",
            "maxLength": 160,
            "type": [
                "string",
                "null"
            ]
        },
        "email": {
            "description": "Hostmaster email address",
            "format": "email",
            "maxLength": 255,
            "required": true,
            "type": "string"
        },
        "id": {
            "description": "Domain Identifier",
            "pattern": "^([0-9a-fA-F]){8}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){4}-([0-9a-fA-F]){12}$",
            "readonly": true,
            "type": "string"
        },
        "name": {
            "description": "Domain name",
            "format": "domain-name",
            "maxLength": 255,
            "readonly": true,
            "required": true,
            "type": "string"
        },
        "serial": {
            "description": "Serial Number",
            "maximum": 4294967295,
            "minimum": 1,
            "readonly": true,
            "type": "integer"
        },
        "ttl": {
            "description": "Time to live",
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer"
        },
        "updated_at": {
            "description": "Date and time of last domain update",
            "format": "date-time",
            "readonly": true,
            "type": [
                "string",
                "null"
            ]
        }
    },
    "title": "domain"
