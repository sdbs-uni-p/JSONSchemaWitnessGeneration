{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "twoFactorCode": {
            "type": "string",
            "maxLength": 2048
        },
        "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 2048
        },
        "newPassword": {
            "type": "string",
            "minLength": 8,
            "maxLength": 2048,
            "pattern": "^(?=.*[A-Z])(?=.*[^A-z0-9])(?=.*[0-9])(?=.*[a-z]).{8,}$"
        },
        "invalidateExistingTokens": {
            "type": "boolean"
        },
        "tokenTTL": {
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [
        "password",
        "newPassword"
    ],
    "additionalProperties": false
}