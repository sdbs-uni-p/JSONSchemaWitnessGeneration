{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "An example schema",
    "type": "object",
    "properties": {
        "a": {
            "type": "string"
        },
        "b": {
            "type": "integer"
        },
        "c": {
            "type": "string",
            "enum": [
                "abc",
                "def",
                "ghi",
                "jkl"
            ]
        }
    },
    "if": {
        "properties": {
            "c": {
                "enum": [
                    "ghi"
                ]
            }
        }
    },
    "then": {
        "required": [
            "a",
            "b",
            "c"
        ]
    },
    "else": {
        "required": [
            "a",
            "c"
        ]
    }
}