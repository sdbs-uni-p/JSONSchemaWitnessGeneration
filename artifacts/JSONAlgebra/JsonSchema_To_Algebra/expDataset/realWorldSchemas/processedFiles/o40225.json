{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "city": {
            "type": "string",
            "pattern": "^[a-zA-Z]+(?:(?:\\s+|-)[a-zA-Z]+)*$"
        },
        "address": {
            "type": "string"
        }
    },
    "required": [
        "city",
        "address"
    ]
}