{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "insurance": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Insurance Schema",
            "type": "object",
            "properties": {
                "company": {
                    "type": "string"
                }
            },
            "required": [
                "company"
            ]
        },
        "car": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Car Schema",
            "type": "object",
