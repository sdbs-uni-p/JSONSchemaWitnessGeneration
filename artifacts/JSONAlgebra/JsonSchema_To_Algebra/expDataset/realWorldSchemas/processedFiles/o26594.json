{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "name",
        "host_id",
        "total_rounds"
    ],
    "properties": {
        "host_id": {
            "type": "integer",
            "minimum": 1,
            "faker": {
                "random.number": [
                    {
                        "max": 5,
                        "min": 1
                    }
                ]
            }
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "faker": "lorem.sentence"
        },
        "description": {
            "type": "string",
            "maxLength": 5000,
            "faker": "lorem.paragraph"
        },
        "poster": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "format": "uri",
            "faker": "image.imageUrl"
        },
        "total_rounds": {
            "type": "integer",
            "minimum": 1,
            "faker": {
                "random.number": [
                    {
                        "max": 7,
                        "min": 3
                    }
                ]
            }
        },
        "start_date": {
            "type": "string",
            "maxLength": 5000,
            "faker": "date.recent"
        },
        "end_date": {
            "type": "string",
            "maxLength": 5000,
            "faker": "date.future"
        }
    }
}