{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "LineChartData",
    "description": "The data contained in a LineChart",
    "type": "object",
    "properties": {
        "labels": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "datasets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string",
                        "pattern": "^#[0-9a-fA-F]{6}$"
                    },
                    "values": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                },
                "required": [
                    "values"
                ]
            }
        }
    },
    "required": [
        "labels",
        "datasets"
    ]
}