{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "authentication": {
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "minLength": 3,
                    "maxLength": 255
                },
                "password": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 255
                }
            },
            "required": [
                "email",
                "password"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "authentication"
    ],
    "additionalProperties": false
}