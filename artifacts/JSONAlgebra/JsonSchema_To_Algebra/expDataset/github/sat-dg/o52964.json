{
    "name": "search-box-widget",
    "description": "Simple Box for entering search words.",
    "integration": {
        "technology": "angular",
        "type": "widget"
    },
    "controls": [
        "laxar-uikit/controls/i18n"
    ],
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "required": [
            "search"
        ],
        "properties": {
            "search": {
                "type": "object",
                "required": [
                    "resource"
                ],
                "properties": {
                    "parameter": {
                        "type": "string",
                        "description": "The name of the URL parameter to use",
                        "default": "q"
                    },
                    "resource": {
                        "type": "string",
                        "format": "topic"
                    }
                }
            },
            "i18n": {
                "type": "object",
                "properties": {
                    "locale": {
                        "type": "string",
                        "default": "default"
                    }
                }
            }
        }
    }
}