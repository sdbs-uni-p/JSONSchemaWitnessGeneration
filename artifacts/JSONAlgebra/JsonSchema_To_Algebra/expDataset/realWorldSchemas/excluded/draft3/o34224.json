{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://d-pac.be/schemas/comparison.json",
    "name": "comparison",
    "title": "Comparison",
    "type": "object",
    "properties": {
        "_id": {
            "type": "string",
            "required": true,
            "description": "Unique id"
        },
        "assessor": {
            "type": "string",
            "required": true,
            "description": "Unique ID reference to a `user` object"
        },
        "assessment": {
            "type": "string",
            "description": "Unique ID reference to an `assessment` object"
        },
        "representations": {
            "type": "object",
            "required": true,
            "properties": {
                "a": {
                    "type": "string",
                    "required": true,
                    "description": "Unique ID reference to a `representation` object"
                },
                "b": {
                    "type": "string",
                    "required": true,
                    "description": "Unique ID reference to a `representation` object"
                },
                "additionalProperties": true
            }
        },
        "data": {
            "type": "object",
            "required": true,
            "properties": {
                "selection": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "required": false,
                    "description": "Unique ID reference to a `representation` object"
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}