{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "#account",
    "type": "object",
    "required": [
        "account"
    ],
    "properties": {
        "account": {
            "id": "#account!core",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "homePage",
                "name"
            ],
            "properties": {
                "homePage": {
                    "type": "string",
                    "format": "iri"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "mbox": {
            "type": "null"
        },
        "mbox_sha1sum": {
            "type": "null"
        },
        "openid": {
            "type": "null"
        }
    }
}