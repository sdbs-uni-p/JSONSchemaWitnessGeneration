{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "orgId": {
            "type": "string",
            "pattern": "^[A-Fa-f\\d]{24}$"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "description": {
            "type": "string",
            "maxLength": 32767
        }
    },
    "additionalProperties": false,
    "required": [
        "name"
    ]
}