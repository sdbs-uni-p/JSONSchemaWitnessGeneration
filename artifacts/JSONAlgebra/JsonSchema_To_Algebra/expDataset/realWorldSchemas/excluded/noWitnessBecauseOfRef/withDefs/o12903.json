{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://philipp1994.de/sap/lunch/schema/apiv1rev1.json",
    "type": "object",
    "properties": {
        "menus": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "lunchItems": {
                        "$ref": "#lunchItems"
                    }
                },
                "required": [
                    "name",
                    "lunchItems"
                ]
            }
        },
        "generationTime": {
            "$ref": "#unixtime"
        },
        "menuForDay": {
            "$ref": "#unixtime"
        }
    },
    "required": [
        "menus",
        "menuForDay",
        "generationTime"
    ],
    "definitions": {
        "lunchItems": {
            "$id": "#lunchItems",
            "type": "array",
            "items": {
                "$ref": "#lunchItem"
            }
        },
        "lunchItem": {
            "$id": "#lunchItem",
            "type": "object",
            "properties": {
                "itemName": {
                    "type": "string"
                }
            },
            "required": [
                "itemName"
            ]
        },
        "unixtime": {
            "$id": "#unixtime",
            "type": "integer",
            "exclusiveMaximum": 2147483647,
            "exclusiveMinimum": -2147483648
        }
    }
}