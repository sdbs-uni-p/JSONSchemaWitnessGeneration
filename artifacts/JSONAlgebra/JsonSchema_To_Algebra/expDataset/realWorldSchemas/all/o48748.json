{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://the-federation.info/social-relay/well-known-schema-v1.json",
    "type": "object",
    "properties": {
        "subscribe": {
            "type": "boolean"
        },
        "scope": {
            "type": "string",
            "pattern": "^all|tags$"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "_uniqueItems": true
        }
    },
    "required": [
        "subscribe",
        "scope",
        "tags"
    ]
}