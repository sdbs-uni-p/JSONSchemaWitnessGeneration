{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "dckrcnf",
    "description": "dckrmgr container description",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "name",
                "version"
            ]
        },
        "hostname": {
            "type": "string"
        },
        "environment": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "value"
                ]
            },
            "minitems": 0
        },
        "volumes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "host_path": {
                        "type": "string"
                    },
                    "container_path": {
                        "type": "string"
                    },
                    "mode": {
                        "type": "string",
                        "pattern": "^((ro)|(rw))(?!(.|\n))"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "host_path",
                    "container_path",
                    "mode"
                ]
            },
            "minitems": 0
        },
        "ports": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "container_port": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "host_port": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "address": {
                        "type": "string"
                    },
                    "protocol": {
                        "type": "string",
                        "pattern": "^((tcp)|(udp))(?!(.|\n))"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "container_port",
                    "host_port"
                ]
            },
            "minitems": 0
        },
        "links": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "alias": {
                        "type": "string"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "alias"
                ]
            },
            "minitems": 0
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "image"
    ]
}