{
    "id": "http://jsonapi.org/schema#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "JSON API Schema",
    "description": "This is a schema for responses in the JSON API format. For more, see http://jsonapi.org",
    "type": "object",
    "resources": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "id": {
                    "type": [
                        "string"
                    ]
                },
                "href": {
                    "type": "string"
                },
                "links": {
                    "type": "object"
                }
            },
            "required": [
                "id"
            ]
        }
    },
    "patternProperties": {
        "^(?!href$)(?!links$)(?!id$)(?!meta)(?!linked)": {
            "$ref": "#/resources"
        }
    },
    "properties": {
        "meta": {
            "type": "object"
        },
        "links": {
            "type": "object"
        },
        "linked": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "$ref": "#/resources"
                }
            }
        }
    }
}