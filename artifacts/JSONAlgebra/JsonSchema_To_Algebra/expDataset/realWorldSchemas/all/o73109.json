{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "request": {},
    "response": {
        "type": "object",
        "properties": {
            "status": {
                "enum": [
                    "ok",
                    "error"
                ]
            },
            "exec_time": {
                "type": "number",
                "minimal": 0
            },
            "message": {
                "type": "string"
            }
        },
        "required": [
            "status"
        ]
    }
}