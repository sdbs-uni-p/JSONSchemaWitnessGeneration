{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "common": {
        "experts": {
            "expert": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "class": {
                        "type": "string",
                        "enum": [
                            "individual",
                            "organisation"
                        ],
                        "default": "organisation"
                    }
                },
                "required": [
                    "name"
                ]
            },
            "experts": {
                "type": "array",
                "items": {
                    "$ref": "#/common/experts/expert"
                },
                "default": []
            }
        },
        "references": {
            "dmpbookreference": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "dmpbook"
                        ]
                    },
                    "chapter": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "chapter"
                ],
                "additionalProperties": false
            },
            "urlreference": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "url"
                        ]
                    },
                    "weblink": {
                        "type": "string",
                        "format": "uri"
                    },
                    "anchor": {
                        "type": "string"
                    }
                },
                "required": [
                    "type",
                    "weblink"
                ],
                "additionalProperties": false
            },
            "crossreference": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "xref"
                        ]
                    },
                    "chapterid": {
                        "type": "integer"
                    },
                    "questionid": {
                        "type": "integer"
                    },
                    "namespace": {
                        "type": "integer"
                    }
                },
                "required": [
                    "chapterid",
                    "questionid"
                ],
                "additionalProperties": false
            },
            "reference": {
                "anyOf": [
                    {
                        "$ref": "#/common/references/dmpbookreference"
                    },
                    {
                        "$ref": "#/common/references/urlreference"
                    },
                    {
                        "$ref": "#/common/references/crossreference"
                    }
                ]
            },
            "references": {
                "type": "array",
                "items": {
                    "$ref": "#/common/references/reference"
                },
                "default": []
            }
        },
        "answers": {
            "optionanswer": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "label": {
                        "type": "string"
                    },
                    "advice": {
                        "type": "string"
                    },
                    "followups": {
                        "type": "array",
                        "items": {
                            "$ref": "#/common/question"
                        }
                    }
                },
                "required": [
                    "id",
                    "label"
                ]
            },
            "optionanswers": {
                "type": "array",
                "items": {
                    "$ref": "#/common/answers/optionanswer"
                },
                "minItems": 2
            }
        },
        "question": {
            "type": "object",
            "properties": {
                "questionid": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "references": {
                    "$ref": "#/common/references/references"
                },
                "experts": {
                    "$ref": "#/common/experts/experts"
                },
                "answers": {
                    "$ref": "#/common/answers/optionanswers"
                },
                "followups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/common/question"
                    }
                }
            },
            "required": [
                "questionid",
                "title",
                "type"
            ]
        },
        "chapter": {
            "type": "object",
            "properties": {
                "chapterid": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/common/question"
                    }
                }
            },
            "required": [
                "chapterid",
                "title"
            ]
        }
    },
    "type": "array",
    "items": {
        "$ref": "#/common/chapter"
    }
}