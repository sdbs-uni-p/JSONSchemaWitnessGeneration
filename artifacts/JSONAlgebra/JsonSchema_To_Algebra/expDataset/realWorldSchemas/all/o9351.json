{
    "name": "component-browser-widget",
    "description": "",
    "integration": {
        "technology": "react",
        "type": "widget"
    },
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
            "components": {
                "type": "object",
                "required": [
                    "resource"
                ],
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic"
                    }
                }
            },
            "details": {
                "type": "object",
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic"
                    },
                    "action": {
                        "type": "string",
                        "format": "topic"
                    },
                    "relation": {
                        "type": "string",
                        "enum": [
                            "readme",
                            "changelog"
                        ],
                        "default": "readme"
                    }
                }
            }
        }
    }
}