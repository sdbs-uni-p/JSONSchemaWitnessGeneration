                        "status",
                        "restartPolicy"
                      ],
                      "properties": {
                        "type": {
                          "$ref": "#/definitions/azure-iot-edgeagent-deployment-1_1_json_defs_moduleType"
                        },
                        "settings": {
                          "$ref": "#/definitions/moduleSettings"
                        },
                        "env": {
                          "$ref": "#/definitions/azure-iot-edgeagent-deployment-1_1_json_defs_env"
