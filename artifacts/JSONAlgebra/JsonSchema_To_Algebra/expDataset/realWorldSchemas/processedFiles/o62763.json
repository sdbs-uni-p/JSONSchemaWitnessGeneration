{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "tbutton",
    "description": "A tbutton atom",
    "type": "object",
    "properties": {
        "disabled": {
            "type": "boolean"
        },
        "children": {
            "type": "string"
        },
        "text": {
            "type": "string"
        }
    },
    "anyOf": [
        {
            "required": [
                "children"
            ]
        },
        {
            "required": [
                "text"
            ]
        }
    ]
}