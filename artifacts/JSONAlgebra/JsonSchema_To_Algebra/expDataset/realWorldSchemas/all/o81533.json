{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "about": {
            "type": "string"
        },
        "company": {
            "type": "string"
        },
        "email": {
            "pattern": "^[\\w|-|.]+@[\\w]+\\.[A-Za-z]{2,4}$",
            "type": "string"
        },
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "picture": {
            "type": "string"
        },
        "tags": {
            "items": [
                {
                    "type": "string"
                }
            ],
            "type": "array"
        }
    },
    "required": [
        "about",
        "email",
        "firstName",
        "lastName",
        "picture",
        "tags",
        "company"
    ],
    "type": "object"
}