{
    "name": "create webhook",
    "request": {
        "http_method": "post",
        "path": "/api/webhooks",
        "headers": {
            "Authorization": "Token token"
        },
        "schema": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "properties": {
                "event": {
                    "type": "string",
                    "title": "event",
                    "description": "the event the webhook will be notified against",
                    "enum": [
                        "payment.status.changed",
                        "collection.received"
                    ]
                },
                "target": {
                    "type": "string",
                    "title": "target",
                    "description": "The callback url to notify for which webhook"
                }
            }
        }
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": "application/json"
        },
        "schema": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "title": "id",
                    "description": "The Unique identifier of this webhook"
                },
                "created": {
                    "type": "string",
                    "title": "created",
                    "description": "The date and time the webhook was created in the UTC timezone. Format: \u201cYYYY-MM-DDTHH:MM:SSZ"
                },
                "updated": {
                    "type": "string",
                    "title": "updated",
                    "description": "The date and time the webhook was last modified in the UTC timezone. Format: \u201cYYYY-MM-DDTHH:MM:SSZ"
                },
                "event": {
                    "type": "string",
                    "title": "event",
                    "description": "The event that this webhook will be notified against",
                    "enum": [
                        "payment.status.changed",
                        "collection.received"
                    ]
                },
                "target": {
                    "type": "string",
                    "title": "target",
                    "description": "The callback url to be notified when the event occurs"
                },
                "user": {
                    "type": "integer",
                    "title": "user",
                    "description": "The Uniquie identifier of the user who created the webhook"
                }
            }
        }
    },
    "examples": {
        "default": {
            "request": {
                "body": {
                    "event": "payment.status.changed",
                    "target": "https://my.callback.url/"
                }
            },
            "response": {
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": {
                    "id": 53,
                    "created": "2015-08-01T16:56:29Z",
                    "updated": "2015-08-01T16:56:29Z",
                    "event": "payment.status.changed",
                    "target": "https://my.callback.url/",
                    "user": 42
                }
            }
        }
    }
}