{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.envirocar.org/badge.json#",
    "type": "object",
    "required": [
        "name",
        "displayName",
        "description"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "displayName": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
                "type": "string"
            }
        },
        "description": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": {
                "type": "string"
            }
        }
    }
}