{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "validation": {
            "description": "If true, bookings must be validated by moderators. Otherwise, they are automatically validated",
            "type": "boolean"
        },
        "school_id": {
            "type": "string"
        },
        "color": {
            "type": "string"
        },
        "extendcolor": {
            "type": "boolean"
        },
        "slotprofile": {
            "type": "string"
        }
    },
    "required": [
        "name",
        "validation",
        "school_id",
        "color"
    ]
}