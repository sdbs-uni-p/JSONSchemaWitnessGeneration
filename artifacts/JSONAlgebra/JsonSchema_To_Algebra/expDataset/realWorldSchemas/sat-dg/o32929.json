{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "ordered-imports": [
            false
        ],
        "no-shadowed-variable": [
            false
        ],
        "no-unused-expression": [
            false
        ],
        "max-classes-per-file": [
            false
        ]
    }
}