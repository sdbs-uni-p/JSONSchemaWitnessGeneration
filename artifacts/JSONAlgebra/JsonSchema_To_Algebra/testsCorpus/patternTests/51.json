        },
        "isUser": {
          "type": "boolean"
        },
        "abstract": {
          "type": "boolean"
        },
        "inheritanceStrategy": {
          "type": "string"
        },
        "paginable": {
          "type": "boolean"
        },
        "idInjection": {
          "type": "boolean"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/field"
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "acceptExtraFields": {
