{
    "name": "Auto Scaling Policy",
    "options": {
        "disable_collapse": true,
        "disable_properties": true
    },
    "properties": {
        "_id": {
            "default": "Policy name",
            "id": "root/id",
            "maxItems": 1,
            "minLength": 4,
            "title": "Auto Scale policy ID",
            "type": "string"
        },
        "description": {
            "_id": "root/description",
            "maxItems": 1,
            "name": "Description",
            "title": "Description",
            "type": "string"
        },
        "isPublic": {
            "_id": "root/isPublic",
            "default": false,
            "maxItems": 1,
            "name": "Is Public",
            "title": "Is Public",
            "type": "boolean"
        },
        "loadThresholds": {
            "_id": "root/loadThresholds",
            "options": {
                "disable_properties": true
            },
            "properties": {
                "loadAverage": {
                    "_id": "root/loadThresholds/loadAverage",
                    "format": "grid",
                    "name": "Load Average",
                    "options": {
                        "collapsed": false,
                        "disable_properties": true
                    },
                    "properties": {
                        "lowerLimit": {
                            "_id": "root/loadThresholds/loadAverage/lowerLimit",
                            "default": 20,
                            "format": "number",
                            "name": "Lower Limit",
                            "required": false,
                            "title": "Lower Limit",
                            "type": "number"
                        },
                        "upperLimit": {
                            "_id": "root/loadThresholds/loadAverage/upperLimit",
                            "default": 100,
                            "format": "number",
                            "name": "Upper Limit",
                            "required": false,
                            "title": "Upper Limit",
                            "type": "number"
                        }
                    },
                    "title": "Load Average",
                    "type": "object"
                },
                "memoryConsumption": {
                    "_id": "root/loadThresholds/memoryConsumption",
                    "format": "grid",
                    "name": "Memory Consumption",
                    "options": {
                        "collapsed": false,
                        "disable_properties": true
                    },
                    "properties": {
                        "lowerLimit": {
                            "_id": "root/loadThresholds/memoryConsumption/lowerLimit",
                            "default": 50,
                            "format": "number",
                            "name": "Lower Limit",
                            "required": false,
                            "title": "Lower Limit",
                            "type": "number"
                        },
                        "upperLimit": {
                            "_id": "root/loadThresholds/memoryConsumption/upperLimit",
                            "default": 80,
                            "format": "number",
                            "name": "Upper Limit",
                            "required": false,
                            "title": "Upper Limit",
                            "type": "number"
                        }
                    },
                    "title": "Memory Consumption",
                    "type": "object"
                },
                "requestsInFlight": {
                    "_id": "root/loadThresholds/requestsInFlight",
                    "format": "grid",
                    "name": "Requests In Flight",
                    "options": {
                        "collapsed": false,
                        "disable_properties": true
                    },
                    "properties": {
                        "lowerLimit": {
                            "_id": "root/loadThresholds/requestsInFlight/lowerLimit",
                            "default": 5,
                            "format": "number",
                            "name": "Lower Limit",
                            "required": false,
                            "title": "Lower Limit",
                            "type": "number"
                        },
                        "upperLimit": {
                            "_id": "root/loadThresholds/requestsInFlight/upperLimit",
                            "default": 30,
                            "format": "number",
                            "name": "Upper Limit",
                            "required": false,
                            "title": "Upper Limit",
                            "type": "number"
                        }
                    },
                    "title": "Requests In Flight",
                    "type": "object"
                }
            },
            "required": [
                "loadAverage",
                "memoryConsumption",
                "requestsInFlight"
            ],
            "title": "Load Thresholds",
            "type": "object"
        }
    },
    "required": [
        "id",
        "loadThresholds"
    ],
    "title": "Auto Scaling Policy Definition",
    "type": "object"
}