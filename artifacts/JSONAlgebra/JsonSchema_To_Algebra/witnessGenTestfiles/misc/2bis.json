{
  "id": "https://example.com/example_schema.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "source": {
      "type":"object",
      "allOf": [
      {
          "required": ["identifier"],
          "properties": {
            "identifier": {"type":"string", "format":"uri"}
          }
        }
      ,
      {
            "required": ["identifier"],
          "properties": {
            "identifier": {"type":"number"}
          }
        }
      ]
    }
  },
