{
    "id": "https://raw.githubusercontent.com/dnmfarrell/Settlers-Game-Notation/master/schema/v1.0/message.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "tCode": {
            "type": "string",
            "enum": [
                "D",
                "F",
                "FO",
                "H",
                "M",
                "P",
                "S"
            ]
        },
        "player": {
            "type": "string",
            "enum": [
                "1",
                "2",
                "3",
                "4",
                "5",
                "6",
                "B"
            ]
        },
        "rNumber": {
            "type": [
                "integer",
                "null"
            ],
            "minimum": 2,
            "maximum": 12
        },
        "tile": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "integer"
            }
        },
        "intersection": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "$ref": "#/definitions/tile"
            }
        },
        "path": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "$ref": "#/definitions/intersection"
            }
        },
        "hCode": {
            "type": "string",
            "enum": [
                "HR",
                "HRB",
                "HRG",
                "HRL",
                "HRO",
                "HRW"
            ]
        },
        "tiles": {
            "type": "array",
            "minItems": 37,
            "items": {
                "type": "object",
                "properties": {
                    "tile": {
                        "$ref": "#/definitions/tile"
                    },
                    "tCode": {
                        "$ref": "#/definitions/tCode"
                    },
                    "rNumber": {
                        "$ref": "#/definitions/rNumber"
                    }
                },
                "required": [
                    "tile",
                    "tCode",
                    "rNumber"
                ],
                "additionalProperties": false
            }
        },
        "harbors": {
            "type": "array",
            "minItems": 8,
            "items": {
                "type": "object",
                "properties": {
                    "path": {
                        "$ref": "#/definitions/path"
                    },
                    "hCode": {
                        "$ref": "#/definitions/hCode"
                    }
                },
                "required": [
                    "path",
                    "hCode"
                ],
                "additionalProperties": false
            }
        },
        "resources": {
            "type": "object",
            "properties": {
                "B": {
                    "type": "integer"
                },
                "G": {
                    "type": "integer"
                },
                "L": {
                    "type": "integer"
                },
                "O": {
                    "type": "integer"
                },
                "W": {
                    "type": "integer"
                }
            },
            "minProperties": 1,
            "additionalProperties": false
        },
        "rCode": {
            "type": "string",
            "enum": [
                "B",
                "G",
                "L",
                "O",
                "W"
            ]
        },
        "cCode": {
            "type": "string",
            "enum": [
                "KN",
                "MO",
                "RB",
                "VP",
                "YP"
            ]
        }
    },
    "type": "array",
    "oneOf": [
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^BC$"
                },
                {
                    "type": "object",
                    "properties": {
                        "intersection": {
                            "$ref": "#/definitions/intersection"
                        }
                    },
                    "required": [
                        "intersection"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^BD$"
                },
                {
                    "type": "object",
                    "properties": {
                        "cCode": {
                            "$ref": "#/definitions/cCode"
                        }
                    },
                    "required": [
                        "cCode"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^BR$"
                },
                {
                    "type": "object",
                    "properties": {
                        "path": {
                            "$ref": "#/definitions/path"
                        }
                    },
                    "required": [
                        "path"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^BS$"
                },
                {
                    "type": "object",
                    "properties": {
                        "intersection": {
                            "$ref": "#/definitions/intersection"
                        }
                    },
                    "required": [
                        "intersection"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^DM$"
                },
                {
                    "type": "object",
                    "properties": {
                        "tiles": {
                            "$ref": "#/definitions/tiles"
                        },
                        "harbors": {
                            "$ref": "#/definitions/harbors"
                        }
                    },
                    "required": [
                        "tiles",
                        "harbors"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^MR$"
                },
                {
                    "type": "object",
                    "properties": {
                        "tile": {
                            "$ref": "#/definitions/tile"
                        }
                    },
                    "required": [
                        "tile"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^ST$"
                },
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "object",
                            "properties": {
                                "resources": {
                                    "$ref": "#/definitions/resources"
                                },
                                "player": {
                                    "$ref": "#/definitions/player"
                                }
                            },
                            "required": [
                                "resources",
                                "player"
                            ],
                            "additionalProperties": false
                        }
                    ],
                    "minSize": 2,
                    "maxSize": 2
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^TR$"
                },
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "object",
                            "properties": {
                                "resources": {
                                    "$ref": "#/definitions/resources"
                                },
                                "player": {
                                    "$ref": "#/definitions/player"
                                }
                            },
                            "required": [
                                "resources",
                                "player"
                            ],
                            "additionalProperties": false
                        }
                    ],
                    "minSize": 2,
                    "maxSize": 2
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^RD$"
                },
                {
                    "type": "object",
                    "properties": {
                        "result": {
                            "type": "integer",
                            "minimum": 2,
                            "maximum": 12
                        }
                    },
                    "required": [
                        "result"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        {
            "items": [
                {
                    "$ref": "#/definitions/player"
                },
                {
                    "pattern": "^PD$"
                },
                {
                    "type": "object",
                    "properties": {
                        "cCode": {
                            "$ref": "#/definitions/cCode"
                        },
                        "rCodes": {
                            "type": "array",
                            "items": [
                                {
                                    "$ref": "#/definitions/cCode"
                                }
                            ],
                            "minSize": 1,
                            "maxSize": 2
                        }
                    },
                    "required": [
                        "cCode"
                    ],
                    "additionalProperties": false
                }
            ]
        }
    ]
}