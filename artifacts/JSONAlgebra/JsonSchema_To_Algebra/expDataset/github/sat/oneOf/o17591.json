                                "default": false
                            },
                            "maxRecordings": {
                                "type": "integer"
                            },
                            "maxRecordingSizeMegabytes": {
                                "type": "integer"
                            },
                            "protocols": {
                                "type": "array",
                                "_uniqueItems": true,
                                "items": {
                                    "type": "integer"
                                }
                            }
                        },
                        "required": [
                            "protocols"
                        ]
                    },
