{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "The POST request to be sent to the API to authenticate a user",
    "type": "object",
    "properties": {
        "username": {
            "type": "string"
        },
        "password": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "username",
        "password"
    ]
}