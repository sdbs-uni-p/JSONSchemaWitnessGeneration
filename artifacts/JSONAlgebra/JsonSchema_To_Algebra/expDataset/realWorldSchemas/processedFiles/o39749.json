{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {},
    "patternProperties": {
        "^[a-z0-9_-]+\\/[a-z0-9_-]+$": {
            "type": "object",
            "properties": {},
            "patternProperties": {
                "^[0-9.*]+(,[0-9.*]+)*$": {
                    "type": "object",
                    "properties": {
                        "order": {
                            "type": "array"
                        },
                        "exclude": {
                            "$ref": "#/definitions/inexclude"
                        },
                        "include": {
                            "$ref": "#/definitions/inexclude"
                        }
                    },
                    "required": [
                        "exclude",
                        "include"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "required": [],
    "definitions": {
        "inexclude": {
            "type": "object",
            "properties": {
                "combined": {
                    "type": "boolean"
                },
                "onlyOne": {
                    "type": "boolean"
                },
                "path": {
                    "$ref": "#/definitions/argument"
                },
                "file": {
                    "$ref": "#/definitions/argument"
                }
            },
            "required": [
                "combined",
                "path",
                "file"
            ],
            "additionalProperties": false
        },
        "argument": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "parameter": {
                    "type": "string"
                },
                "separator": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "multiple": {
                    "type": "boolean"
                },
                "relative": {
                    "type": "boolean"
                }
            },
            "required": [
                "parameter"
            ],
            "additionalProperties": false
        }
    }
}