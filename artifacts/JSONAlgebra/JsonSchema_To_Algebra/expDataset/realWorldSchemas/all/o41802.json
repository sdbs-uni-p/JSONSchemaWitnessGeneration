{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "rootSourceString": {
            "type": "string"
        },
        "rootSourceArray": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "someSourceString": {
                            "type": "string"
                        },
                        "anotherSourceString": {
                            "type": "string"
                        },
                        "someSourceArray": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "someSourceString",
                        "anotherSourceString",
                        "someSourceArray"
                    ]
                }
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "rootSourceArray"
    ]
}