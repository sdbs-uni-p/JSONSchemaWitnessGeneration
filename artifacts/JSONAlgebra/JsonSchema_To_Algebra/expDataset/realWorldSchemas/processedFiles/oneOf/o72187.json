                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "smsShareBody"
                    ]
                }
            },
            "additionalProperties": false
        },
        "whatsapp": {
            "type": "object",
            "properties": {
                "shareMedium": {
                    "type": "string",
                    "default": "WHATSAPP",
                    "enum": [
                        "WHATSAPP"
                    ]
                },
                "config": {
                    "type": "object",
                    "title": "WhatsApp",
                    "properties": {
                        "whatsAppShareBody": {
                            "type": "string",
