{
    "name": "table-editor-widget",
    "description": "A widget that provides a spreadsheet-like content editor.",
    "integration": {
        "technology": "angular",
        "type": "widget"
    },
    "styleSource": "scss/table-editor-widget.scss",
    "compatibility": [
        "json-patch"
    ],
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "required": [
            "timeSeries"
        ],
        "properties": {
            "title": {
                "type": "object",
                "properties": {
                    "htmlLabel": {
                        "type": "string",
                        "description": "Editable table title"
                    }
                }
            },
            "timeSeries": {
                "type": "object",
                "description": "Shows the time series in an editable table.",
                "required": [
                    "resource"
                ],
                "properties": {
                    "resource": {
                        "type": "string",
                        "description": "Name of the data resource which should refer to a 2-dimensional array.",
                        "format": "topic",
                        "axRole": "inlet"
                    }
                }
            }
        }
    }
}