{
    "name": "component-list-activity",
    "description": "Provides data on components",
    "integration": {
        "technology": "plain",
        "type": "activity"
    },
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
            "components": {
                "type": "object",
                "required": [
                    "resource"
                ],
                "properties": {
                    "url": {
                        "type": "string",
                        "default": "/components"
                    },
                    "resource": {
                        "type": "string",
                        "format": "topic"
                    }
                }
            },
            "rewrite": {
                "type": "object",
                "properties": {
                    "rules": {
                        "type": "string",
                        "default": "default"
                    }
                }
            }
        }
    }
}