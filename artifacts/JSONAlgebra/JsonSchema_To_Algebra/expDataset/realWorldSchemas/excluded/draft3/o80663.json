{
    "name": "Strict Contract",
    "request": {
        "http_method": "GET",
        "path": "/strict",
        "headers": {
            "Accept": "application/json"
        },
        "params": {}
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": "application/json"
        },
        "schema": {
            "$schema": "http://json-schema.org/draft-03/schema#",
            "type": "object",
            "required": true,
            "properties": {
                "devices": {
                    "type": "array",
                    "minItems": 2,
                    "items": {
                        "type": "string",
                        "required": true,
                        "default": "/dev/<%= values[:device_id].tap do values[:device_id] = values[:device_id] + 1 end %>",
                        "pattern": "^/dev/[\\d]+$"
                    },
                    "required": true,
                    "uniqueItems": true
                }
            }
        }
    }
}