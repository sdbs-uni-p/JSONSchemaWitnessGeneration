{
    "additionalProperties": false,
    "description": "Hypercharge MobilePayment request",
    "properties": {
        "payment": {
            "additionalProperties": false,
            "properties": {
                "amount": {
                    "extends": "types.json#/amount",
                    "required": true
                },
                "billing_address": {
                    "extends": "types.json#/address",
                    "required": false
                },
                "card_holder": {
                    "extends": "types.json#/card_holder",
                    "required": false
                },
                "currency": {
                    "extends": "types.json#/currency",
                    "required": true
                },
                "customer_email": {
                    "extends": "types.json#/customer_email",
                    "required": false
                },
                "customer_phone": {
                    "extends": "types.json#/customer_phone"
                },
                "expires_in": {
                    "extends": "types.json#/expires_in",
                    "required": false
                },
                "meta": {
                    "extends": "types.json#/meta",
                    "required": false
                },
                "notification_url": {
                    "description": "URL at merchant\u2019s site where gateway sends outcome of transaction after the payment has reached a final state. This should be an SSL secured page",
                    "extends": "types.json#/url",
                    "required": true
                },
                "recurring_schedule": {
                    "extends": "types.json#/recurring_schedule",
                    "required": false
                },
                "retries": {
                    "extends": "types.json#/retries",
                    "required": false
                },
                "risk_params": {
                    "extends": "types.json#/risk_params",
                    "required": false
                },
                "shipping_address": {
                    "extends": "types.json#/address",
                    "required": false
                },
                "transaction_id": {
                    "extends": "types.json#/transaction_id",
                    "required": false
                },
                "transaction_types": {
                    "extends": "types.json#/transaction_types",
                    "required": false
                },
                "type": {
                    "description": "Type of the Payment => static MobilePayment",
                    "pattern": "^MobilePayment$",
                    "required": true,
                    "type": "string"
                },
                "usage": {
                    "extends": "types.json#/usage",
                    "required": true
                }
            },
            "required": true,
            "type": "object"
        }
    },
    "type": "object"
}