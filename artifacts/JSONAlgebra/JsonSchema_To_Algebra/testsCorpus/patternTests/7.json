{
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "pattern": "^[_a-z0-9-]+(\\.[_a-z0-9-]+)*@[_a-z0-9-]+(\\.[_a-z0-9-]+)*(\\.[a-z]{2,3})$"
    },
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 12
    },
    "macAddress": {
      "type": "string",
      "pattern": "([0-9a-fA-F][0-9a-fA-F](:|-)){4}([0-9a-fA-F][0-9a-fA-F])"
    }
  },
  "required": [
    "email",
    "password",
    "macAddress"
  ]
}