{
    "description": "Recipe Package JSON Schema",
    "properties": {
        "do_clean": {
            "properties": {
                "command": {
                    "description": "Command for clean objects from building",
                    "required": false,
                    "type": "string"
                }
            },
            "required": false,
            "type": "object"
        },
        "do_compile": {
            "properties": {
                "commands": {
                    "description": "List of commands for compiling source code",
                    "items": {
                        "required": false,
                        "type": "string"
                    },
                    "required": false,
                    "type": "array"
                }
            },
            "required": false,
            "type": "object"
        },
        "do_dependencies": {
            "properties": {
                "packages": {
                    "description": "List of packages for build dependencies",
                    "items": {
                        "required": false,
                        "type": "string"
                    },
                    "required": false,
                    "type": "array"
                }
            },
            "required": false,
            "type": "object"
        },
        "do_download": {
            "properties": {
                "src_md5sum": {
                    "description": "MD5sum for the source code downloaded",
                    "required": false,
                    "type": "string"
                },
                "src_uri": {
                    "description": "URI for download the source code",
                    "required": false,
                    "type": "string"
                }
            },
            "required": true,
            "type": "object"
        },
        "do_fetch": {
            "properties": {
                "download_cmd": {
                    "description": "Base command for download source code [wget, git, svn]",
                    "required": false,
                    "type": "string"
                }
            },
            "required": true,
            "type": "object"
        },
        "do_info": {
            "properties": {
                "description": {
                    "description": "Description of recipe",
                    "required": false,
                    "type": "string"
                },
                "filename": {
                    "description": "Full filename of recipe",
                    "required": false,
                    "type": "string"
                },
                "homepage": {
                    "description": "Home site for the tool",
                    "required": false,
                    "type": "string"
                },
                "license": {
                    "description": "License type for the tool",
                    "required": false,
                    "type": "string"
                }
            },
            "required": true,
            "type": "object"
        },
        "do_install": {
            "properties": {
                "commands": {
                    "description": "Install command for the build source",
                    "required": false,
                    "type": "string"
                },
                "destination": {
                    "description": "Destination of install [native, stage]",
                    "required": false,
                    "type": "string"
                }
            },
            "required": false,
            "type": "object"
        },
        "do_package": {
            "properties": {
                "commands": {
                    "description": "List of RPM/DEB build package commands",
                    "items": {
                        "required": false,
                        "type": "string"
                    },
                    "required": false,
                    "type": "array"
                }
            },
            "required": false,
            "type": "object"
        }
    },
    "required": false,
    "title": "Recipe",
    "type": "object"
}