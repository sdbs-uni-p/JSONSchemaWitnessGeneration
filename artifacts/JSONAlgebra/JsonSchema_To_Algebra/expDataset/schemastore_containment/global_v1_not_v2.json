{
  "allOf": [
    {
      "title": "JSON schema for the ASP.NET global configuration files",
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "additionalProperties": true,
      "required": [
        "sources"
      ],
      "properties": {
        "sources": {
          "type": "array",
          "description": "A list of source folders relative to this file.",
          "items": {
            "type": "string"
          }
        }
      }
    },
    {
      "not": {
        "title": "JSON schema for the ASP.NET global configuration files",
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "additionalProperties": true,
        "required": [
          "projects"
        ],
        "properties": {
          "projects": {
            "type": "array",
            "description": "A list of project folders relative to this file.",
            "items": {
              "type": "string"
            }
          },
          "sources": {
            "type": "array",
            "description": "This property is deprecated, please use the 'projects' property instead.",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  ]
}
