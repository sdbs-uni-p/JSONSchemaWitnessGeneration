{
    "name": "chart-widget",
    "description": "Widget to display a chart from time series data",
    "integration": {
        "technology": "angular",
        "type": "widget"
    },
    "styleSource": "scss/chart-widget.scss",
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "required": [
            "timeSeries"
        ],
        "properties": {
            "title": {
                "type": "object",
                "properties": {
                    "htmlLabel": {
                        "type": "string",
                        "description": "Title for the chart."
                    }
                }
            },
            "timeSeries": {
                "type": "object",
                "description": "Provide the data to display in another widget.",
                "required": [
                    "resource"
                ],
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic",
                        "axRole": "intlet",
                        "description": "Name of the data resource"
                    }
                }
            },
            "chart": {
                "type": "object",
                "description": "Set options for the chart representation.",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "pieChart",
                            "stackedAreaChart",
                            "multiBarChart"
                        ],
                        "default": "pieChart",
                        "description": "Type of the chart, excepted types are defined in external library NVD3."
                    }
                }
            }
        }
    }
}