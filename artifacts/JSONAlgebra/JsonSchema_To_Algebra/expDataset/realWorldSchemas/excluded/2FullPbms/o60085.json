{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Spacebox response API",
    "description": "Schema for spacebox server response validation",
    "type": "object",
    "required": [
        "response"
    ],
    "properties": {
        "response": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/mobile/login"
                },
                {
                    "$ref": "#/definitions/mobile/getLoginStatus"
                },
                {
                    "$ref": "#/definitions/getUsers"
                },
                {
                    "$ref": "#/definitions/getFriends"
                },
                {
                    "$ref": "#/definitions/login"
                },
                {
                    "$ref": "#/definitions/logout"
                },
                {
                    "$ref": "#/definitions/changeLikeStatus"
                }
            ]
        }
    },
    "definitions": {
        "mobile": {
            "login": {
                "description": "Mobile login response",
                "type": "object",
                "properties": {
                    "mid": {
                        "title": "VK user id",
                        "type": "string"
                    },
                    "access_token": {
                        "title": "VK API access code",
                        "type": "string"
                    }
                },
                "required": [
                    "mid",
                    "access_token"
                ],
                "additionalProperties": false
            },
            "getLoginStatus": {
                "description": "Mobile login status response",
                "type": "object",
                "properties": {
                    "mid": {
                        "title": "VK user id",
                        "type": "string"
                    },
                    "access_token": {
                        "title": "VK API access code",
                        "type": "string"
                    }
                },
                "required": [
                    "mid",
                    "access_token"
                ],
                "additionalProperties": false
            }
        },
        "getUsers": {
            "type": "array",
            "minItems": 0,
            "items": {
                "title": "User info",
                "type": "object",
                "properties": {
                    "mid": {
                        "title": "User id",
                        "type": "string"
                    },
                    "distance": {
                        "title": "Distance",
                        "type": "number"
                    },
                    "latitude": {
                        "title": "Latitude",
                        "type": "number"
                    },
                    "longitude": {
                        "title": "Longitude",
                        "type": "number"
                    },
                    "like": {
                        "description": "Does current user like this user?",
                        "type": "boolean"
                    },
                    "likeMe": {
                        "description": "Does this user like current user?",
                        "type": "boolean"
                    }
                },
                "required": [
                    "mid",
                    "latitude",
                    "longitude",
                    "like",
                    "likeMe"
                ],
                "additionalProperties": false
            }
        },
        "getFriends": {
            "description": "friends for current user",
            "type": "array",
            "minItems": 0,
            "items": {
                "title": "friend",
                "type": "object",
                "properties": {
                    "mid": {
                        "title": "user id",
                        "type": "string"
                    },
                    "timestamp": {
                        "title": "dating date",
                        "type": "number"
                    },
                    "location": {
                        "title": "location",
                        "type": "object",
                        "properties": {
                            "latitude": {
                                "title": "latitude",
                                "type": "number"
                            },
                            "longitude": {
                                "title": "longitude",
                                "type": "number"
                            },
                            "timestamp": {
                                "title": "location time",
                                "type": "number"
                            }
                        }
                    }
                },
                "required": [
                    "mid",
                    "timestamp"
                ],
                "additionalProperties": false
            }
        },
        "login": {
            "description": "null",
            "type": "object",
            "properties": {},
            "additionalProperties": false
        },
        "logout": {
            "description": "null",
            "type": "object",
            "properties": {},
            "additionalProperties": false
        },
        "changeLikeStatus": {
            "description": "null",
            "type": "object",
            "properties": {},
            "additionalProperties": false
        }
    }
}