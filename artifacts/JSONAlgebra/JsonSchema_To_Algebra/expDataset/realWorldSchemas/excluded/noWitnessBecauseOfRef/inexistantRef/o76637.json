{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "#attachment",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "usageType",
        "display",
        "contentType",
        "length",
        "sha2"
    ],
    "properties": {
        "usageType": {
            "type": "string",
            "format": "iri"
        },
        "display": {
            "$ref": "#languagemap"
        },
        "description": {
            "$ref": "#languagemap"
        },
        "contentType": {
            "type": "string",
            "format": "mimetype"
        },
        "length": {
            "type": "number",
            "minimum": 0
        },
        "sha2": {
            "type": "string",
            "format": "sha2"
        },
        "fileUrl": {
            "type": "string",
            "format": "iri"
        }
    }
}