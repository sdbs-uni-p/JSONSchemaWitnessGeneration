{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "email": {
            "type": "string"
        },
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "postedSlides": {
            "anyOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "string",
                    "enum": [
                        "yes",
                        "Yes",
                        "no",
                        "No"
                    ]
                }
            ]
        },
        "rating": {
            "type": "number"
        }
    },
    "additionalProperties": false,
    "required": [
        "email",
        "firstName",
        "lastName",
        "postedSlides",
        "rating"
    ]
}