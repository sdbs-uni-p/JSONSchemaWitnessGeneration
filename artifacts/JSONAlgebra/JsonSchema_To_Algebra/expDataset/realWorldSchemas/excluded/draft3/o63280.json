{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "type": "object",
    "description": "Order",
    "properties": {
        "state": {
            "type": "string",
            "enum": [
                "new",
                "submitted",
                "redirected",
                "gotdetails",
                "confirmed",
                "cancelled",
                "deleted",
                "finalised",
                "closed"
            ],
            "required": true
        },
        "items": {
            "type": "array",
            "items": {
                "type": "object",
                "properites": {
                    "_product": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "object"
                            }
                        ]
                    },
                    "price": {
                        "type": "number"
                    },
                    "total": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string",
                        "required": true
                    },
                    "quantity": {
                        "type": "integer",
                        "required": true
                    },
                    "supplierId": {
                        "type": "string",
                        "required": true
                    }
                }
            }
        },
        "payments": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "orderId": {
                                "type": "string",
                                "required": true
                            },
                            "user": {
                                "type": "string",
                                "required": true
                            },
                            "state": {
                                "type": "string",
                                "required": true
                            },
                            "method": {
                                "type": "string",
                                "required": true
                            },
                            "transactions": {
                                "type": "object",
                                "properties": {
                                    "log": {
                                        "type": "array"
                                    },
                                    "initial": {
                                        "type": "object"
                                    },
                                    "info": {
                                        "type": "object"
                                    },
                                    "details": {
                                        "anyOf": [
                                            {
                                                "type": "object"
                                            },
                                            {
                                                "type": "null"
                                            }
                                        ]
                                    },
                                    "confirmation": {
                                        "type": "object"
                                    },
                                    "cancelled": {
                                        "type": "object"
                                    },
                                    "refund": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        },
        "total": {
            "type": "number",
            "required": true
        },
        "user": {
            "oneOf": [
                {
                    "type": "string",
                    "required": true
                },
                {
                    "type": "object",
                    "properties": {
                        "_id": {
                            "type": "string",
                            "required": true
                        },
                        "username": {
                            "type": "string",
                            "required": true
                        },
                        "displayName": {
                            "type": "string",
                            "required": true
                        },
                        "email": {
                            "type": "string",
                            "required": true
                        }
                    }
                }
            ]
        },
        "orderType": {
            "type": "string",
            "enum": [
                "supplier",
                "customer"
            ],
            "default": "customer"
        },
        "pickup": {
            "type": "string"
        }
    }
}