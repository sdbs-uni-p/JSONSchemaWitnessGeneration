{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Update Post",
    "type": "object",
    "required": [
        "post"
    ],
    "properties": {
        "post": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "title",
                "body"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "body": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                }
            }
        }
    }
}