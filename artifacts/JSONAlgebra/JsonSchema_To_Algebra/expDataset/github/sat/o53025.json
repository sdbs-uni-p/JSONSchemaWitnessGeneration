{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "3D data upload",
    "type": "object",
    "properties": {
        "vertices": {
            "type": "array",
            "items": {
                "type": "array",
                "maxItems": 3,
                "minItems": 3,
                "items": {
                    "type": "number"
                }
            }
        },
        "facets": {
            "type": "array",
            "items": {
                "type": "array",
                "maxItems": 3,
                "minItems": 3,
                "items": {
                    "type": "integer"
                }
            }
        },
        "camera": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "z": {
                    "type": "number"
                }
            },
            "additionalProperties": false,
            "required": [
                "x",
                "y",
                "z"
            ]
        }
    },
    "additionalProperties": false,
    "required": [
        "vertices",
        "facets",
        "camera"
    ]
}