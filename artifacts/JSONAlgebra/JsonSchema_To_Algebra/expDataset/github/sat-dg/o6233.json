{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "accept": {
            "type": "boolean"
        },
        "email": {
            "_format": "email",
            "maxLength": 1024,
            "type": "string"
        },
        "token": {
            "type": "string"
        }
    },
    "required": [
        "email",
        "token",
        "accept"
    ],
    "type": "object"
}