[
    {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "title": "Postal abbreviations",
        "description": "Postal abbreviations for Canada",
        "id": "jsdb:postCAN",
        "definitions": {
            "CAN_province": {
                "type": "string",
                "enum": [
                    "AB",
                    "BC",
                    "MB",
                    "NB",
                    "NL",
                    "NS",
                    "NT",
                    "NU",
                    "ON",
                    "PE",
                    "QC",
                    "SK",
                    "YT"
                ]
            },
            "CAN_postalCode": {
                "type": "string",
                "pattern": "^[A-Z][0-9][A-Z]( )?[0-9][A-Z][0-9]$"
            }
        }
    },
