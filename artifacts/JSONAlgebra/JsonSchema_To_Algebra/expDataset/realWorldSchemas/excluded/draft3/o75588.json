{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id": "http://schema.cardwirth.org/summary#",
    "required": true,
    "additionalProperties": false,
    "properties": {
        "type": {
            "type": "string",
            "required": true
        },
        "image": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "string",
            "required": true
        },
        "author": {
            "type": "string",
            "required": true
        },
        "defnitions": {
            "type": "object",
            "required": true,
            "properties": {
                "flags": {
                    "type": "array",
                    "required": true,
                    "items": {
                        "type": "object",
                        "id": "http://schema.cardwirth.org/summary#flag",
                        "required": true,
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string",
                                "required": true
                            },
                            "default": {
                                "type": "boolean",
                                "required": true
                            },
                            "valueNameOnTrue": {
                                "type": "string",
                                "required": true
                            },
                            "valueNameOnFalse": {
                                "type": "string",
                                "required": true
                            }
                        }
                    }
                },
                "stepsList": {
                    "type": "array",
                    "required": true,
                    "items": {
                        "type": "object",
                        "id": "http://schema.cardwirth.org/summary#steps",
                        "required": true,
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string",
                                "required": true
                            },
                            "default": {
                                "type": "integer",
                                "minimum": 0,
                                "maximum": 9,
                                "required": true
                            },
                            "valueNames": {
                                "type": "array",
                                "required": true,
                                "minItems": 10,
                                "maxItems": 10,
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "prerequisite": {
            "type": "object",
            "required": true,
            "properties": {
                "achievementsNumber": {
                    "type": "integer",
                    "minimum": 0,
                    "required": true
                },
                "achievements": {
                    "type": "array",
                    "required": true,
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "startSceneId": {
            "type": "integer",
            "minimum": 0,
            "required": true
        },
        "recommendedLevel": {
            "type": "object",
            "required": true,
            "properties": {
                "min": {
                    "type": "integer",
                    "minimum": 0,
                    "required": true
                },
                "max": {
                    "type": "integer",
                    "minimum": 0,
                    "required": true
                }
            }
        }
    }
}