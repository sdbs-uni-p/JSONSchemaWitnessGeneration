{
    "$schema": "http://json-schema.org/draft-07/schema#/definitions/",
    "$id": "https://www.yacpdb.org/schemas/yacpdb-tourney.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "$ref": "#/definitions/text"
        },
        "comments": {
            "$ref": "#/definitions/text_list"
        }
    },
    "required": [
        "name"
    ],
    "additionalProperties": false,
    "definitions": {
        "text": {
            "anyOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "minLength": 1
                }
            ]
        },
        "text_list": {
            "type": "array",
            "elements": {
                "$ref": "#/definitions/text"
            },
            "minItems": 1,
            "_uniqueItems": true
        }
    }
}