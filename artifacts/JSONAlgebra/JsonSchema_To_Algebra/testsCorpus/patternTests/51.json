            },
            {
              "type": "string"
            }
          ]
        },
        "max": {
          "oneOf": [
            {
              "type": "number"
            },
            {
              "type": "string"
            }
          ]
        },
        "enum": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 1
        },
        "precision": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "uniqueItems": false,
          "minItems": 2,
          "maxItems": 2
        },
        "default": {},
        "onUpdate": {
          "type": "string"
        },
        "unique": {
          "type": "boolean"
        },
        "pattern": {
          "type": "string"
        },
        "patternOptions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "filterable": {
          "type": "boolean"
        },
        "sortable": {
          "type": "boolean"
        },
        "readOnly": {
          "type": "boolean"
        },
        "writeOnly": {
          "type": "boolean"
        },
        "encrypted": {
          "type": "boolean"
        }
      },
