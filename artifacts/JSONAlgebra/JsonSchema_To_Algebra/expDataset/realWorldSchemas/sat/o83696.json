{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Name",
    "description": "Full name, middle name optional",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 10
        },
        "middleName": {
            "type": "string",
            "minLength": 0,
            "maxLength": 8
        },
        "lastName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20
        }
    },
    "required": [
        "firstName",
        "lastName"
    ]
}