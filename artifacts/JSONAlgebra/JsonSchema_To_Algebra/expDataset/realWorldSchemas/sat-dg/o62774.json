{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "list",
    "description": "A list atom",
    "type": "object",
    "properties": {
        "modifier": {
            "description": "A pattern modifier",
            "enum": [
                "",
                "mix"
            ]
        },
        "listItems": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "icon": {
                        "enum": [
                            "arrow",
                            "check",
                            "nitro"
                        ]
                    },
                    "text": {
                        "type": "string"
                    }
                }
            },
            "minItems": 1,
            "maxItems": 3
        }
    },
    "required": [
        "modifier",
        "listItems"
    ]
}