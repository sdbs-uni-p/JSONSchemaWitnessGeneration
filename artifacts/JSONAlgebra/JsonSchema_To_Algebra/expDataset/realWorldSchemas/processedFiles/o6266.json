{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "properties": {
        "acceptTerms": {
            "enum": [
                "on"
            ]
        },
        "companyName": {
            "maxLength": 1024,
            "type": "string"
        },
        "email": {
            "_format": "email",
            "maxLength": 1024,
            "type": "string"
        },
        "firstName": {
            "maxLength": 1024,
            "minLength": 1,
            "type": "string"
        },
        "lastName": {
            "maxLength": 1024,
            "minLength": 1,
            "type": "string"
        },
        "location": {
            "maxLength": 1024,
            "type": "string"
        },
        "password": {
            "maxLength": 2048,
            "minLength": 8,
            "type": "string"
        },
        "phoneNumber": {
            "maxLength": 1024,
            "type": "string"
        },
        "url": {
            "maxLength": 1024,
            "type": "string"
        }
    },
    "required": [
        "email",
        "firstName",
        "lastName",
        "password",
        "acceptTerms"
    ],
    "type": "object"
}