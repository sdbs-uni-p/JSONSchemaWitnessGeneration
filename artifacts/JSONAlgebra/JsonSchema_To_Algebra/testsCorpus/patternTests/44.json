{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "universe": {
      "$ref": "#/definitions/identifier"
    },
    "region": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/identifier"
          }
        },
        {
          "$ref": "#/definitions/identifier"
        }
      ]
    },
    "name": {
      "$ref": "#/definitions/identifier",
      "maxLength": 64
    },
    "description": {
      "type": "string"
    },
    "repository": {
      "type": [
        "object",
        "string"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "author": {
      "$ref": "#/definitions/person"
    },
    "contributors": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/person"
      }
    },
    "maintainers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/person"
      }
    },
    "configuration": {
      "type": "object"
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/asset"
      }
    },
    "policy": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/asset"
      }
    },
    "resources": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "$ref": "#/definitions/version"
        }
      }
    },
    "client": {
      "type": "string"
    },
    "health": {
      "type": "string"
    },
    "manage": {
      "type": "string"
    },
    "documentation": {
      "type": "string"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "person": {
      "type": [
        "object",
        "string"
      ],
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "identifier": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[\\w\\d][\\w\\d-]*$"
    },
    "aws_identifier": {
      "type": "string",
      "minLength": 1,
      "pattern": "^([\\w\\d].*|\\*)$"
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10,
      "pattern": "^(\\*|\\d{4}\\-\\d{2}\\-\\d{2})$"
    },
    "asset": {
      "type": "object",
      "required": [
        "service",
        "name",
        "permissions"
      ],
      "properties": {
        "region": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/aws_identifier"
              }
            },
            {
              "$ref": "#/definitions/aws_identifier"
            }
          ]
        },
        "service": {
          "$ref": "#/definitions/identifier"
        },
        "name": {
          "$ref": "#/definitions/aws_identifier"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}