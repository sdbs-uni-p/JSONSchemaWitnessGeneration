{
    "title": "Team Format",
    "description": "This is a schema defining the strict format for writing a list of team members.",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://jsonschema.net",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "firstName": {
                "type": "string"
            },
            "lastName": {
                "type": "string"
            },
            "identity": {
                "type": "string"
            },
            "role": {
                "type": "string"
            }
        },
        "required": [
            "firstName",
            "lastName",
            "identity",
            "role"
        ]
    },
    "minItems": 1,
    "additionalItems": false
}