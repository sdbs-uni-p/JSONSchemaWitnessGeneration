                "insurance": {
                    "$ref": "#/definitions/insurance"
                },
                "four_wheel_drive": {
                    "type": "boolean"
                }
            }
        },
        "vechicle": {
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Vechicle Schema",
            "type": "object",
            "properties": {
                "reg_number": {
                    "type": "string"
                }
            },
            "required": [
                "reg_number"
            ]
        }
    },
    "title": "Sports Car Schema",
    "type": "object",
    "$ref": "#/definitions/car",
    "properties": {
        "track": {
            "type": "string"
        }
    }
