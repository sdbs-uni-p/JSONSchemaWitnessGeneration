{
    "type": "object",
    "title": "Contact schema",
    "$schema": "http://json-schema.org/draft-04/schema",
    "_auth_fields": [
        "emails",
        "name_title",
        "name_first",
        "name_last",
        "phones",
        "places",
        "orders"
    ],
    "_public_fields": [
        ""
    ],
    "_hidden_fields": [
        ""
    ],
    "_nested_relationships": [
        "phones",
        "emails",
        "places",
        "orders",
        "payments"
    ],
    "_nesting_depth": 6,
    "properties": {
        "id": {
            "_db_settings": {
                "required": true,
                "type": "id_field",
                "primary_key": true
            }
        },
        "emails": {
            "_db_settings": {
                "type": "relationship",
                "document": "Email",
                "backref_name": "contact"
            }
        },
        "name_title": {
            "_db_settings": {
                "required": false,
                "type": "text"
            }
        },
        "name_first": {
            "_db_settings": {
                "required": false,
                "type": "text"
            }
        },
        "name_last": {
            "_db_settings": {
                "required": false,
                "type": "text"
            }
        },
        "phones": {
            "_db_settings": {
                "type": "relationship",
                "document": "Phone",
                "backref_name": "contact"
            }
        },
        "places": {
            "_db_settings": {
                "type": "relationship",
                "document": "Place",
                "backref_name": "contact"
            }
        },
        "orders": {
            "_db_settings": {
                "type": "relationship",
                "document": "Order",
                "backref_name": "contact"
            }
        },
        "status": {
            "_db_settings": {
                "type": "choice",
                "choices": [
                    "active",
                    "inactive",
                    "canceled",
                    "terminated"
                ],
                "default": "inactive"
            }
        }
    }
}