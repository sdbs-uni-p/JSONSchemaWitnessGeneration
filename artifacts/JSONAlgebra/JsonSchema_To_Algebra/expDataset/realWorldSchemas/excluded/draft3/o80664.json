{
    "request": {
        "http_method": "GET",
        "path": "/echo",
        "headers": {
            "Accept": "application/json",
            "Custom-Auth-Token": "<%= auth_token %>",
            "X-Message": "<%= key %>"
        },
        "params": {}
    },
    "response": {
        "status": 200,
        "headers": {
            "Content-Type": "application/json"
        },
        "schema": {
            "$schema": "http://json-schema.org/draft-03/schema#",
            "type": "object",
            "required": true,
            "properties": {
                "message": {
                    "type": "string",
                    "default": "<%= req['HEADERS']['X-Message'].reverse %>",
                    "required": true
                }
            }
        }
    }
}