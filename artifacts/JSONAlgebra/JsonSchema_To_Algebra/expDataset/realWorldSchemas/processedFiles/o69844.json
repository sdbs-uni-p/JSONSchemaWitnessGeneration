{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "label": {
            "type": "string"
        },
        "additional-classes": {
            "type": "string"
        },
        "wrapper-class": {
            "type": "string"
        },
        "validation": {
            "type": "object",
            "properties": {
                "save-rules": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "default": "required"
                    }
                },
                "validation-id": {
                    "type": "string"
                },
                "focus-id": {
                    "type": "string"
                },
                "validation-messages": {
                    "type": "object",
                    "properties": {
                        "required": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}