{
    "additionalProperties": false,
    "properties": {
        "emailAddress": {
            "pattern": "^[^@^\\s]+@[^@^\\.^\\s]+(\\.[^@^\\.^\\s]*)*.gov.uk",
            "type": "string"
        },
        "mobileNumber": {
            "pattern": "^\\+44[\\d]{10}$",
            "type": "string"
        },
        "password": {
            "type": "string"
        }
    },
    "required": [
        "emailAddress",
        "mobileNumber",
        "password"
    ],
    "type": "object"
}