{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Theme",
    "description": "Theme objects",
    "type": "object",
    "properties": {
        "name": {
            "description": "Name of the theme",
            "type": "string"
        },
        "author": {
            "description": "Author of the theme",
            "type": "string"
        },
        "description": {
            "description": "Description of the theme",
            "type": "string"
        },
        "body": {
            "type": "array"
        },
        "main": {
            "type": "array"
        },
        "diffHeader": {
            "type": "array"
        },
        "diffBody": {
            "type": "array"
        }
    }
}