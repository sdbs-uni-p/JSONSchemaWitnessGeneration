{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "TableStreamUpdate",
    "description": "The data contained in a Table Stream update object",
    "type": "object",
    "properties": {
        "stream": {
            "type": "array",
            "items": {
                "items": {
                    "type": "object",
                    "row": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "color": {
                                    "type": "string",
                                    "pattern": "^#[0-9a-fA-F]{6}$"
                                },
                                "background": {
                                    "type": "string",
                                    "pattern": "^#[0-9a-fA-F]{6}$"
                                },
                                "value": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "value"
                            ]
                        }
                    }
                }
            }
        }
    }
}