{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "periodic_booking": {
            "type": "boolean"
        },
        "is_available": {
            "type": "boolean"
        },
        "min_delay": {
            "description": "In seconds. The resource must be booked at least min_delay in advance",
            "type": "integer",
            "minimum": 0
        },
        "max_delay": {
            "description": "In seconds. The resource can be booked at most max_delay in advance",
            "type": "integer",
            "minimum": 0
        },
        "color": {
            "type": "string"
        },
        "validation": {
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "periodic_booking",
        "is_available"
    ],
    "additionalProperties": false
}