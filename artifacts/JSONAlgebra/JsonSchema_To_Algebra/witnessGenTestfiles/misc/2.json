{
  "id": "https://example.com/example_schema.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "definitions" : {
    "Person": {
      "required": ["identifier"],
      "properties": {
        "identifier": {"type":"string", "format":"uri"}
      }
    },
    "Organization": {
      "required": ["identifier"],
      "properties": {
        "identifier": {"type":"number"}
      }
    }
  },
  "properties": {
    "source": {
      "type":"object",
      "allOf": [
        {"$ref":"#/definitions/Person"},
        {"$ref":"#/definitions/Organization"}
      ]
    }
  },
  "required":["source"]
}