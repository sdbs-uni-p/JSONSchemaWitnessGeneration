                                    },
                                    "newAccounts": {
                                        "type": "boolean",
                                        "default": false
                                    },
                                    "newAccountsUserGroups": {
                                        "type": "array",
                                        "_uniqueItems": true,
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "clientid": {
                                        "type": "string"
                                    },
                                    "clientsecret": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "clientid",
                                    "clientsecret"
                                ]
                            },
                            "google": {
                                "type": "object",
                                "properties": {
                                    "callbackurl": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "newAccounts": {
                                        "type": "boolean",
                                        "default": false
                                    },
                                    "newAccountsUserGroups": {
                                        "type": "array",
                                        "_uniqueItems": true,
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "clientid": {
                                        "type": "string"
                                    },
                                    "clientsecret": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "clientid",
                                    "clientsecret"
                                ]
                            },
                            "github": {
                                "type": "object",
                                "properties": {
                                    "callbackurl": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "newAccounts": {
                                        "type": "boolean",
                                        "default": false
                                    },
                                    "newAccountsUserGroups": {
                                        "type": "array",
                                        "_uniqueItems": true,
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "clientid": {
                                        "type": "string"
                                    },
                                    "clientsecret": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "clientid",
                                    "clientsecret"
                                ]
                            },
                            "reddit": {
                                "type": "object",
                                "properties": {
