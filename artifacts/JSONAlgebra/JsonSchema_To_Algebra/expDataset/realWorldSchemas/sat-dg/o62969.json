{
    "title": "States",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "States represents states of USA",
    "required": [
        "_metadata",
        "states"
    ],
    "type": "object",
    "properties": {
        "states": {
            "items": [
                {
                    "required": [
                        "id",
                        "state_code",
                        "state_name"
                    ],
                    "type": "object",
                    "properties": {
                        "state_code": {
                            "type": "string"
                        },
                        "id": {
                            "type": "integer"
                        },
                        "state_name": {
                            "type": "string"
                        }
                    }
                }
            ],
            "type": "array"
        },
        "_metadata": {
            "required": [
                "request",
                "response"
            ],
            "type": "object",
            "properties": {
                "request": {
                    "required": [
                        "ip",
                        "params",
                        "time",
                        "user"
                    ],
                    "type": "object",
                    "properties": {
                        "ip": {
                            "type": "string"
                        },
                        "params": {
                            "type": "null"
                        },
                        "user": {
                            "type": "null"
                        },
                        "time": {
                            "type": "string"
                        }
                    }
                },
                "response": {
                    "required": [
                        "pagination",
                        "time"
                    ],
                    "type": "object",
                    "properties": {
                        "pagination": {
                            "required": [
                                "limit",
                                "offset",
                                "total"
                            ],
                            "type": "object",
                            "properties": {
                                "limit": {
                                    "type": "integer"
                                },
                                "offset": {
                                    "type": "integer"
                                },
                                "total": {
                                    "type": "integer"
                                }
                            }
                        },
                        "time": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}