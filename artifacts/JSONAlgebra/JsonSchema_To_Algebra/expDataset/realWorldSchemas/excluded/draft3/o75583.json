{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id": "http://schema.cardwirth.org/info_card#",
    "required": true,
    "additionalProperties": false,
    "properties": {
        "type": {
            "enum": [
                "infoCard"
            ],
            "required": true
        },
        "id": {
            "type": "integer",
            "minimum": 0,
            "required": true
        },
        "name": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "string",
            "required": true
        },
        "image": {
            "type": "string",
            "format": "uri",
            "required": true
        }
    }
}