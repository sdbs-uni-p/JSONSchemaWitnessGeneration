{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "errors": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "login": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "login"
                    ]
                },
                {
                    "properties": {
                        "password": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "password"
                    ]
                }
            ]
        }
    },
    "required": [
        "errors"
    ]
}