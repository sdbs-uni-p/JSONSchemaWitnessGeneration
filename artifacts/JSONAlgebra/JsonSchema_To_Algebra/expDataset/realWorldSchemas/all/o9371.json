{
    "name": "my-navigation-widget",
    "description": "A simple widget that demonstrates LaxarJS flow navigation",
    "integration": {
        "technology": "angular",
        "type": "widget"
    },
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
            "links": {
                "type": "array",
                "description": "Generate links for these navigation targets",
                "items": {
                    "type": "object",
                    "required": [
                        "target",
                        "htmlLabel"
                    ],
                    "properties": {
                        "target": {
                            "type": "string"
                        },
                        "htmlLabel": {
                            "type": "string"
                        }
                    }
                }
            },
            "buttons": {
                "type": "array",
                "description": "Generate buttons for these navigation targets",
                "items": {
                    "type": "object",
                    "required": [
                        "target",
                        "htmlLabel"
                    ],
                    "properties": {
                        "target": {
                            "type": "string"
                        },
                        "htmlLabel": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}