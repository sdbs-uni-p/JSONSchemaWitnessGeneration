{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "The asset.json file for mesh settings objects.",
    "type": "object",
    "properties": {
        "asset_type": {
            "type": "string",
            "pattern": "mesh_settings"
        },
        "mesh": {
            "type": "string",
            "description": "A path to a mesh asset"
        },
        "material": {
            "description": "A path to a material asset",
            "type": "string"
        }
    },
    "required": [
        "asset_type",
        "mesh",
        "material"
    ]
}