{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "email": {
            "_format": "email",
            "maxLength": 1024,
            "type": "string"
        },
        "password": {
            "maxLength": 2048,
            "minLength": 8,
            "type": "string"
        },
        "token": {
            "type": "string"
        }
    },
    "required": [
        "token",
        "email",
        "password"
    ],
    "type": "object"
}