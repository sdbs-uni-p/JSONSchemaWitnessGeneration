{
    "name": "open-street-map-widget",
    "description": "A widget displaying a map using location searching and maps from openstreetmap.org.",
    "integration": {
        "technology": "angular",
        "type": "widget"
    },
    "controls": [
        "finder-box-control",
        "finder-demo-utilities"
    ],
    "styleSource": "scss/open-street-map-widget.scss",
    "features": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
            "search": {
                "type": "object",
                "required": [
                    "resource"
                ],
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic",
                        "axRole": "inlet"
                    }
                }
            },
            "locations": {
                "type": "object",
                "properties": {
                    "resource": {
                        "type": "string",
                        "format": "topic",
                        "axRole": "inlet"
                    },
                    "searchingOn": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "format": "topic",
                            "axRole": "inlet",
                            "axPattern": "flag"
                        },
                        "description": "One or more flags, indicating that geocoding is still in progress."
                    }
                }
            },
            "i18n": {
                "type": "object",
                "properties": {
                    "locale": {
                        "type": "string",
                        "format": "topic",
                        "axRole": "inlet",
                        "default": "default"
                    }
                }
            }
        }
    }
}