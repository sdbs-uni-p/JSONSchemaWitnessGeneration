{
    "description": "A schema defining configuration to run ping within BLiPP using the cmd_line_probe",
    "name": "ping",
    "properties": {
        "$schema": {
            "default": "http://unis.incntre.iu.edu/schema/blippmeasurements/20130428/ping#",
            "required": false,
            "type": "string"
        },
        "-M": {
            "enum": [
                "do",
                "dont",
                "want"
            ],
            "required": false,
            "title": "Path MTU Discovery strategy",
            "type": "string"
        },
        "-Q": {
            "required": false,
            "title": "QOS bits",
            "type": "string"
        },
        "-W": {
            "default": 2,
            "min": 1,
            "required": false,
            "title": "Timeout",
            "type": "integer"
        },
        "-p": {
            "default": "00",
            "required": false,
            "title": "Byte pattern",
            "type": "string"
        },
        "-s": {
            "default": 56,
            "required": false,
            "title": "Packet Size",
            "type": "integer"
        },
        "-t": {
            "default": 60,
            "max": 255,
            "min": 0,
            "required": false,
            "type": "integer"
        },
        "address": {
            "required": true,
            "title": "Host",
            "type": "string"
        },
        "command": {
            "default": "ping -c 1 $-W $-s $-t $-p $-M $-Q $address",
            "required": false,
            "title": "Command",
            "type": "string"
        },
        "eventTypes": {
            "additionalProperties": true,
            "default": {
                "rtt": "ps:tools:blipp:linux:net:ping:rtt",
                "ttl": "ps:tools:blipp:linux:net:ping:ttl"
            },
            "required": false,
            "title": "Event Types",
            "type": "object"
        },
        "probe_module": {
            "default": "cmd_line_probe",
            "required": false,
            "title": "Probe Module",
            "type": "string"
        },
        "regex": {
            "default": "ttl=(?P<ttl>\\d+).*time=(?P<rtt>\\d+\\.\\d+) ",
            "required": false,
            "title": "Regular Expression",
            "type": "string"
        }
    },
    "title": "BLiPP ping probe configuration",
    "type": "object"
}