{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "A list of books",
    "type": "array",
    "items": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "title": "BookRecord",
        "description": "A book record",
        "type": "object",
        "properties": {
            "id": {
                "type": "integer",
                "description": "The id of the book"
            },
            "title": {
                "type": "string",
                "description": "Book title"
            },
            "author": {
                "type": "string",
                "description": "Book author"
            },
            "isbn": {
                "type": "string",
                "description": "Book ISDB (optional)"
            }
        },
        "required": [
            "id",
            "title",
            "author"
        ]
    }
}