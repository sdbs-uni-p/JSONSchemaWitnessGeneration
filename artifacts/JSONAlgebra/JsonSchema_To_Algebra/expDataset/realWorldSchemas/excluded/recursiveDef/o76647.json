{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "#interactionactivity_none",
    "type": "object",
    "required": [
        "interactionType"
    ],
    "allOf": [
        {
            "$ref": "#interactionactivity_base"
        },
        {
            "oneOf": [
                {
                    "properties": {
                        "interactionType": {
                            "enum": [
                                "true-false"
                            ]
                        },
                        "correctResponsesPattern": {
                            "type": "array",
                            "items": {
                                "enum": [
                                    "true",
                                    "false"
                                ]
                            }
                        }
                    }
                },
                {
                    "not": {
                        "properties": {
                            "interactionType": {
                                "enum": [
                                    "true-false"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    ],
    "properties": {
        "choices": {
            "type": "null"
        },
        "scale": {
            "type": "null"
        },
        "source": {
            "type": "null"
        },
        "target": {
            "type": "null"
        },
        "steps": {
            "type": "null"
        },
        "interactionType": {
            "enum": [
                "true-false",
                "fill-in",
                "long-fill-in",
                "numeric",
                "other"
            ]
        }
    }
}