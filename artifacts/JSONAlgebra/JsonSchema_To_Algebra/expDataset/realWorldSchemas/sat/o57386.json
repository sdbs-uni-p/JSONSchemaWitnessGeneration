{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "collection": {
            "type": "string"
        },
        "method": {
            "type": "string",
            "enum": [
                "insert",
                "replace",
                "remove"
            ]
        },
        "elementId": {
            "type": "string"
        },
        "element": {
            "type": "object"
        },
        "token": {
            "type": "string"
        }
    },
    "required": [
        "collection",
        "method"
    ]
}